@page "/goals"
@inject FinanceService Finance
@inject IStringLocalizer<SharedResource> L

<div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100">@L["FinancialGoals"]</h1>
    <button @onclick="NewGoal" class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-primary-500 to-primary-600 text-white font-semibold rounded-xl hover:from-primary-600 hover:to-primary-700 transition-all shadow-lg shadow-primary-500/30">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        @L["NewGoal"]
    </button>
</div>

@if (!_goals.Any())
{
    <div class="text-center py-16">
        <div class="w-20 h-20 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
        </div>
        <p class="text-gray-500 dark:text-gray-400 mb-4">No goals yet. Create your first financial goal!</p>
    </div>
}
else
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var g in _goals)
        {
            var curr = GetVal(g.Category);
            var pct = g.Target > 0 ? Math.Min(100, (curr / g.Target) * 100) : 0;
            var color = pct >= 100 ? "green" : pct >= 50 ? "amber" : "primary";

            <div class="card-hover bg-white dark:bg-gray-900 rounded-2xl p-6 border border-gray-200 dark:border-gray-800">
                <div class="flex items-start justify-between mb-4">
                    <div>
                        <h3 class="font-bold text-gray-800 dark:text-gray-200 text-lg">@g.Name</h3>
                        <p class="text-sm text-gray-500 dark:text-gray-400">@g.Category</p>
                    </div>
                    <button @onclick="() => Del(g.Id)" class="p-2 text-gray-400 hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/30 rounded-lg transition-colors">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>

                <!-- Progress Bar -->
                <div class="mb-4">
                    <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                        <div class="h-full rounded-full transition-all duration-500 @(pct >= 100 ? "bg-green-500" : pct >= 50 ? "bg-amber-500" : "bg-primary-500")" style="width: @pct%"></div>
                    </div>
                </div>

                <div class="flex items-end justify-between">
                    <div>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white">@curr.ToString("N0") €</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">of @g.Target.ToString("N0") €</p>
                    </div>
                    <div class="text-right">
                        <p class="text-3xl font-bold @(pct >= 100 ? "text-green-500" : pct >= 50 ? "text-amber-500" : "text-primary-500")">@pct.ToString("N0")%</p>
                        @if (!string.IsNullOrEmpty(g.Deadline))
                        {
                            <p class="text-xs text-gray-400">@L["Deadline"] @g.Deadline</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- Modal -->
@if (_editing != null)
{
    <div class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4" @onclick="() => _editing = null">
        <div class="bg-white dark:bg-gray-900 rounded-2xl p-6 w-full max-w-md shadow-2xl" @onclick:stopPropagation="true">
            <h2 class="text-xl font-bold text-gray-800 dark:text-gray-200 mb-6">@L["NewGoal"]</h2>
            
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">@L["Name"]</label>
                    <input @bind="_editing.Name" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">@L["Target"]</label>
                    <input type="number" @bind="_editing.Target" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">@L["Deadline"]</label>
                    <input @bind="_editing.Deadline" placeholder="@L["DateExample"]" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">@L["Category"]</label>
                    <select @bind="_editing.Category" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500">
                        @foreach (var c in Enum.GetValues<GoalCategory>())
                        {
                            <option value="@c">@c</option>
                        }
                    </select>
                </div>
            </div>

            <div class="flex gap-3 mt-6">
                <button @onclick="Save" class="flex-1 px-4 py-3 bg-gradient-to-r from-primary-500 to-primary-600 text-white font-semibold rounded-xl hover:from-primary-600 hover:to-primary-700 transition-all">
                    @L["Save"]
                </button>
                <button @onclick="() => _editing = null" class="px-4 py-3 text-gray-700 dark:text-gray-300 font-semibold rounded-xl hover:bg-gray-100 dark:hover:bg-gray-800 transition-all">
                    @L["Cancel"]
                </button>
            </div>
        </div>
    </div>
}

@code {
    List<Goal> _goals = new();
    Goal? _editing;
    Totals? _t;

    protected override async Task OnInitializedAsync()
    {
        _goals = await Finance.GetGoalsAsync();
        var l = await Finance.GetLatestSnapshotAsync();
        if (l != null) _t = await Finance.CalculateTotalsAsync(l);
    }

    decimal GetVal(GoalCategory c) => _t == null ? 0 : (c == GoalCategory.Liquidity ? _t.Liquidity : (c == GoalCategory.Investments ? _t.Investments : _t.GrandTotal));
    void NewGoal() => _editing = new Goal();
    async Task Save() { await Finance.SaveGoalAsync(_editing!); _editing = null; await OnInitializedAsync(); }
    async Task Del(long id) { await Finance.DeleteGoalAsync(id); await OnInitializedAsync(); }
}

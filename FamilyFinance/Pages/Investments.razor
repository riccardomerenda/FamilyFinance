@page "/investments"
@using System.Security.Claims
@using FamilyFinance.Models
@using FamilyFinance.Services.Interfaces
@inject IAssetHoldingService HoldingService
@inject IStringLocalizer<SharedResource> L
@inject AuthenticationStateProvider AuthState
@inject FamilyFinance.Services.AuthService Auth

<PageTitle>@L["Investments"] - FamilyFinance</PageTitle>

@if (_loading)
{
    <div class="flex items-center justify-center min-h-[60vh]">
        <div class="w-12 h-12 border-4 border-primary-500 border-t-transparent rounded-full animate-spin"></div>
    </div>
}
else if (_holdings.Count == 0)
{
    <!-- Empty State -->
    <div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
        <div class="w-24 h-24 rounded-full bg-gradient-to-br from-cyan-500/20 to-teal-500/20 flex items-center justify-center mb-6 animate-in">
            <svg class="w-12 h-12 text-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-2">@L["NoInvestmentsYet"]</h2>
        <p class="text-gray-500 dark:text-gray-400 mb-6">@L["ImportToStartTracking"]</p>
        <a href="/import-investments" class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-cyan-500 to-cyan-600 text-white font-semibold rounded-xl hover:from-cyan-600 hover:to-cyan-700 transition-all shadow-lg shadow-cyan-500/30">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
            </svg>
            @L["ImportInvestments"]
        </a>
    </div>
}
else
{
    <div class="space-y-6">
        <!-- Page Header -->
        <div class="flex items-center justify-between animate-in">
            <div>
                <div class="flex items-center gap-2">
                    <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100">@L["Investments"]</h1>
                    <HelpTooltip Title="@L["Investments"]" Content="@L["HelpInvestments"]" />
                </div>
                <p class="text-gray-500 dark:text-gray-400 text-sm mt-1">@L["InvestmentsPageDesc"]</p>
            </div>
            <div class="flex items-center gap-3">
                <a href="/import-investments" class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-cyan-500 to-cyan-600 text-white rounded-xl text-sm font-medium hover:from-cyan-600 hover:to-cyan-700 transition-all shadow-md shadow-cyan-500/20">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
                    </svg>
                    @L["ImportInvestments"]
                </a>
                <a href="/portfolios" class="inline-flex items-center gap-2 px-4 py-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-all">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    @L["ManagePortfolios"]
                </a>
            </div>
        </div>

        <!-- Performance Summary - Bento Grid -->
        <div class="grid grid-cols-12 gap-4 lg:gap-6">
            <!-- Hero Card: Total Value -->
            <div class="col-span-12 lg:col-span-5 bento-card p-6 lg:p-8 bg-gradient-to-br from-cyan-500 via-teal-500 to-emerald-500 text-white animate-in">
                <div class="flex items-start justify-between mb-6">
                    <div>
                        <p class="text-white/70 text-sm font-medium uppercase tracking-wider">@L["CurrentValue"]</p>
                        <h2 class="text-4xl lg:text-5xl font-extrabold mt-2 money">@_totalValue.ToString("N0") €</h2>
                        <p class="text-white/60 text-sm mt-2">@L["AcrossAllPortfolios"]</p>
                    </div>
                    <div class="w-14 h-14 rounded-2xl bg-white/20 backdrop-blur flex items-center justify-center">
                        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                        </svg>
                    </div>
                </div>
                <div class="pt-4 border-t border-white/20">
                    <div class="flex items-center gap-4">
                        <div>
                            <span class="text-white/70 text-xs">@L["TotalGainLoss"]</span>
                            <p class="font-bold text-lg money">@(_totalGainLoss >= 0 ? "+" : "")@_totalGainLoss.ToString("N0") €</p>
                        </div>
                        <div class="px-3 py-1 rounded-full money @(_totalGainLoss >= 0 ? "bg-green-400/30" : "bg-red-400/30")">
                            <span class="font-bold">@(_totalGainLossPercent >= 0 ? "+" : "")@_totalGainLossPercent.ToString("N2")%</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cost Basis Card -->
            <div class="col-span-6 lg:col-span-4 bento-card p-5 animate-in delay-1">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-gray-500 to-gray-600 flex items-center justify-center">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400">@L["CostBasis"]</span>
                </div>
                <p class="text-2xl lg:text-3xl font-bold text-gray-900 dark:text-white money">@_totalCostBasis.ToString("N0") €</p>
                <p class="text-xs text-gray-400 mt-1">@L["TotalInvested"]</p>
            </div>

            <!-- Performance Badge -->
            <div class="col-span-6 lg:col-span-3 bento-card p-5 @(_totalGainLoss >= 0 ? "bg-gradient-to-br from-emerald-500 to-green-600" : "bg-gradient-to-br from-red-500 to-rose-600") text-white animate-in delay-2">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-11 h-11 rounded-xl bg-white/20 flex items-center justify-center">
                        @if (_totalGainLoss >= 0)
                        {
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                            </svg>
                        }
                        else
                        {
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"></path>
                            </svg>
                        }
                    </div>
                    <span class="text-sm font-medium text-white/80">@L["Performance"]</span>
                </div>
                <p class="text-2xl lg:text-3xl font-bold money">@(_totalGainLossPercent >= 0 ? "+" : "")@_totalGainLossPercent.ToString("N2")%</p>
                <p class="text-xs text-white/70 mt-1">@L["OverallReturn"]</p>
            </div>

            <!-- Pie Chart -->
            <div class="col-span-12 lg:col-span-5 bento-card p-5 lg:p-6 animate-in delay-3">
                <h3 class="text-lg font-semibold mb-4 text-gray-800 dark:text-gray-200">@L["AssetAllocation"]</h3>
                <div class="h-64 lg:h-72">
                    <Chart CanvasId="invPie" Config="@_invPieConfig" />
                </div>
            </div>

            <!-- Portfolio Cards -->
            <div class="col-span-12 lg:col-span-7 space-y-3 animate-in delay-4">
                <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-2">@L["PortfolioBreakdown"]</h3>
                
                @foreach (var summary in _portfolioSummaries)
                {
                    var isExpanded = _expandedPortfolios.Contains(summary.PortfolioId);
                    
                    <div class="bento-card overflow-hidden">
                        <!-- Portfolio Header (Clickable) -->
                        <button @onclick="() => TogglePortfolio(summary.PortfolioId)" class="w-full p-4 flex items-center justify-between hover:bg-gray-50 dark:hover:bg-gray-800/30 transition-colors cursor-pointer" style="background: linear-gradient(135deg, @(summary.PortfolioColor)15, transparent)">
                            <div class="flex items-center gap-3">
                                <!-- Expand/Collapse Arrow -->
                                <div class="w-8 h-8 rounded-lg flex items-center justify-center bg-gray-100 dark:bg-gray-800 transition-transform duration-200 @(isExpanded ? "rotate-90" : "")">
                                    <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </div>
                                <div class="w-10 h-10 rounded-xl flex items-center justify-center text-white" style="background-color: @summary.PortfolioColor">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                                    </svg>
                                </div>
                                <div class="text-left">
                                    <h3 class="font-bold text-gray-800 dark:text-gray-200">@summary.PortfolioName</h3>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">
                                        @summary.HoldingCount asset@(summary.HoldingCount != 1 ? "s" : "")
                                    </p>
                                </div>
                            </div>
                            <div class="text-right">
                                <p class="text-xl font-bold text-gray-900 dark:text-white money">@summary.TotalMarketValue.ToString("N0") €</p>
                                <p class="text-sm font-medium money @(summary.GainLoss >= 0 ? "text-green-600 dark:text-green-400" : "text-red-600 dark:text-red-400")">
                                    @(summary.GainLoss >= 0 ? "+" : "")@summary.GainLoss.ToString("N0") € (@(summary.GainLossPercent >= 0 ? "+" : "")@summary.GainLossPercent.ToString("N2")%)
                                </p>
                            </div>
                        </button>
                        
                        <!-- Assets List (Collapsible) -->
                        @if (isExpanded)
                        {
                            <div class="border-t border-gray-200 dark:border-gray-800 divide-y divide-gray-100 dark:divide-gray-800 bg-gray-50/50 dark:bg-gray-800/20">
                                @foreach (var h in summary.Holdings)
                                {
                                    <div class="p-4 flex items-center justify-between hover:bg-white dark:hover:bg-gray-800/50 transition-colors">
                                        <div class="flex items-center gap-3">
                                            <div class="w-10 h-10 rounded-lg flex items-center justify-center text-white font-bold text-sm" style="background-color: @summary.PortfolioColor">
                                                @h.Ticker[..Math.Min(3, h.Ticker.Length)]
                                            </div>
                                            <div>
                                                <span class="font-medium text-gray-700 dark:text-gray-300">@h.Ticker</span>
                                                @if (!string.IsNullOrEmpty(h.Name))
                                                {
                                                    <p class="text-xs text-gray-500 dark:text-gray-400 truncate max-w-48">@h.Name</p>
                                                }
                                                <p class="text-xs text-gray-400 money">@L["CostBasis"]: @h.TotalCostBasis.ToString("N2") €</p>
                                            </div>
                                        </div>
                                        <div class="text-right">
                                            <p class="font-semibold text-gray-900 dark:text-white money">@h.MarketValue.ToString("N2") €</p>
                                            <p class="text-sm money @(h.GainLoss >= 0 ? "text-green-600 dark:text-green-400" : "text-red-600 dark:text-red-400")">
                                                @(h.GainLoss >= 0 ? "+" : "")@h.GainLoss.ToString("N2") € (@(h.GainLossPercent >= 0 ? "+" : "")@h.GainLossPercent.ToString("N2")%)
                                            </p>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Last Updated Info -->
        @if (_lastUpdated.HasValue)
        {
            <p class="text-xs text-gray-400 text-center mt-4">
                @L["LastUpdated"]: @_lastUpdated.Value.ToString("dd/MM/yyyy HH:mm")
            </p>
        }
    </div>
}

@code {
    private bool _loading = true;
    private List<AssetHolding> _holdings = new();
    private List<PortfolioHoldingSummary> _portfolioSummaries = new();
    private object _invPieConfig = new { };
    private HashSet<int> _expandedPortfolios = new();
    private int _familyId;
    
    // Totals
    private decimal _totalValue;
    private decimal _totalCostBasis;
    private decimal _totalGainLoss;
    private decimal _totalGainLossPercent;
    private DateTime? _lastUpdated;

    void TogglePortfolio(int portfolioId)
    {
        if (_expandedPortfolios.Contains(portfolioId))
            _expandedPortfolios.Remove(portfolioId);
        else
            _expandedPortfolios.Add(portfolioId);
    }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthState.GetAuthenticationStateAsync();
        var userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        if (!string.IsNullOrEmpty(userId))
        {
            var user = await Auth.GetUserWithFamilyAsync(userId);
            if (user != null)
            {
                _familyId = user.FamilyId;
            }
        }

        // Load live holdings
        _holdings = await HoldingService.GetAllAsync(_familyId);
        _portfolioSummaries = await HoldingService.GetSummaryByPortfolioAsync(_familyId);
        
        // Calculate totals
        _totalValue = _holdings.Sum(h => h.MarketValue);
        _totalCostBasis = _holdings.Sum(h => h.TotalCostBasis);
        _totalGainLoss = _totalValue - _totalCostBasis;
        _totalGainLossPercent = _totalCostBasis > 0 ? (_totalGainLoss / _totalCostBasis) * 100 : 0;
        _lastUpdated = _holdings.Any() ? _holdings.Max(h => h.LastUpdated) : null;
        
        if (_holdings.Any())
        {
            BuildCharts();
        }
        
        _loading = false;
    }

    void BuildCharts()
    {
        var portfolioGroups = _portfolioSummaries
            .Select(p => new { Name = p.PortfolioName, Value = p.TotalMarketValue, Color = p.PortfolioColor })
            .OrderByDescending(x => x.Value)
            .ToList();

        _invPieConfig = new
        {
            type = "doughnut",
            data = new
            {
                labels = portfolioGroups.Select(x => x.Name),
                datasets = new[] { new { 
                    data = portfolioGroups.Select(x => x.Value), 
                    backgroundColor = portfolioGroups.Select(x => x.Color).ToArray()
                } }
            },
            options = new { 
                responsive = true, 
                maintainAspectRatio = false,
                plugins = new { legend = new { position = "bottom" } }
            }
        };
    }
}

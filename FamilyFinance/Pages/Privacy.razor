@page "/privacy"
@layout EmptyLayout
@attribute [AllowAnonymous]
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@inject NavigationManager Nav
@inject IStringLocalizer<SharedResource> L

<div class="min-h-screen bg-gray-50 dark:bg-gray-950 py-12 px-4">
    <div class="max-w-3xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-12">
            <a href="/" class="inline-flex items-center gap-3 mb-6">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-primary-500 to-accent-500 flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <span class="text-xl font-bold text-gray-800 dark:text-gray-200">FamilyFinance</span>
            </a>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">@L["PrivacyPolicy"]</h1>
            <p class="text-gray-500 dark:text-gray-400 mt-2">@L["PrivacyLastUpdate"]</p>
        </div>

        <!-- Content -->
        <div class="bg-white dark:bg-gray-900 rounded-2xl shadow-lg p-8 space-y-8">
            
            <!-- Intro -->
            <section>
                <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                    @L["PrivacyIntro"]
                </p>
            </section>

            <!-- Data Controller -->
            <section>
                <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-3 flex items-center gap-2">
                    <span class="text-2xl">üë§</span> @L["PrivacyDataController"]
                </h2>
                <p class="text-gray-600 dark:text-gray-300">
                    Riccardo Merenda<br>
                    @L["PrivacyContact"]: <a href="https://www.linkedin.com/in/riccardomerenda/" target="_blank" class="text-primary-600 dark:text-primary-400 hover:underline">LinkedIn</a>
                </p>
            </section>

            <!-- Data Collected -->
            <section>
                <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-3 flex items-center gap-2">
                    <span class="text-2xl">üìã</span> @L["PrivacyDataCollected"]
                </h2>
                <div class="space-y-4 text-gray-600 dark:text-gray-300">
                    <div>
                        <h3 class="font-medium text-gray-700 dark:text-gray-200">@L["PrivacyRegistrationData"]</h3>
                        <ul class="list-disc list-inside ml-4 mt-1">
                            <li>@L["PrivacyEmailAddress"]</li>
                            <li>@L["PrivacyDisplayName"]</li>
                            <li>@L["PrivacyPasswordHashed"]</li>
                        </ul>
                    </div>
                    <div>
                        <h3 class="font-medium text-gray-700 dark:text-gray-200">@L["PrivacyFinancialData"]</h3>
                        <ul class="list-disc list-inside ml-4 mt-1">
                            <li>@L["PrivacyBankBalances"]</li>
                            <li>@L["PrivacyInvestmentsPortfolios"]</li>
                            <li>@L["PrivacyFinancialGoals"]</li>
                            <li>@L["PrivacyMonthlyExpenses"]</li>
                        </ul>
                    </div>
                </div>
            </section>

            <!-- Purpose -->
            <section>
                <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-3 flex items-center gap-2">
                    <span class="text-2xl">üéØ</span> @L["PrivacyPurpose"]
                </h2>
                <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1">
                    <li>@L["PrivacyPurposeWealth"]</li>
                    <li>@L["PrivacyPurposeAuth"]</li>
                    <li>@L["PrivacyPurposePrefs"]</li>
                </ul>
            </section>

            <!-- Cookies -->
            <section>
                <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-3 flex items-center gap-2">
                    <span class="text-2xl">üç™</span> @L["PrivacyCookies"]
                </h2>
                <p class="text-gray-600 dark:text-gray-300 mb-4">
                    @L["PrivacyCookiesIntro"]
                </p>
                <div class="overflow-x-auto">
                    <table class="w-full text-sm">
                        <thead>
                            <tr class="border-b border-gray-200 dark:border-gray-700">
                                <th class="text-left py-2 px-3 text-gray-700 dark:text-gray-300">@L["PrivacyCookieName"]</th>
                                <th class="text-left py-2 px-3 text-gray-700 dark:text-gray-300">@L["PrivacyCookiePurpose"]</th>
                                <th class="text-left py-2 px-3 text-gray-700 dark:text-gray-300">@L["PrivacyCookieDuration"]</th>
                            </tr>
                        </thead>
                        <tbody class="text-gray-600 dark:text-gray-400">
                            <tr class="border-b border-gray-100 dark:border-gray-800">
                                <td class="py-2 px-3 font-mono text-xs">.AspNetCore.Identity</td>
                                <td class="py-2 px-3">@L["PrivacyCookieAuth"]</td>
                                <td class="py-2 px-3">@L["PrivacyCookieDays"]</td>
                            </tr>
                            <tr class="border-b border-gray-100 dark:border-gray-800">
                                <td class="py-2 px-3 font-mono text-xs">.AspNetCore.Culture</td>
                                <td class="py-2 px-3">@L["PrivacyCookieLang"]</td>
                                <td class="py-2 px-3">@L["PrivacyCookieYear"]</td>
                            </tr>
                            <tr>
                                <td class="py-2 px-3 font-mono text-xs">theme (localStorage)</td>
                                <td class="py-2 px-3">@L["PrivacyCookieTheme"]</td>
                                <td class="py-2 px-3">@L["PrivacyCookiePersistent"]</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>

            <!-- Data Sharing -->
            <section>
                <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-3 flex items-center gap-2">
                    <span class="text-2xl">üîí</span> @L["PrivacyDataSharing"]
                </h2>
                <p class="text-gray-600 dark:text-gray-300">
                    @L["PrivacyDataSharingText"]
                </p>
            </section>

            <!-- Security -->
            <section>
                <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-3 flex items-center gap-2">
                    <span class="text-2xl">üõ°Ô∏è</span> @L["PrivacySecurity"]
                </h2>
                <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1">
                    <li>@L["PrivacySecurityHttps"]</li>
                    <li>@L["PrivacySecurityHash"]</li>
                    <li>@L["PrivacySecurityMultitenant"]</li>
                    <li>@L["PrivacySecurityLockout"]</li>
                </ul>
            </section>

            <!-- Rights -->
            <section>
                <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-3 flex items-center gap-2">
                    <span class="text-2xl">‚öñÔ∏è</span> @L["PrivacyRights"]
                </h2>
                <p class="text-gray-600 dark:text-gray-300 mb-3">
                    @L["PrivacyRightsIntro"]
                </p>
                <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1">
                    <li>@L["PrivacyRightAccess"]</li>
                    <li>@L["PrivacyRightRectify"]</li>
                    <li>@L["PrivacyRightErase"]</li>
                    <li>@L["PrivacyRightPortability"]</li>
                    <li>@L["PrivacyRightObject"]</li>
                </ul>
                <p class="text-gray-600 dark:text-gray-300 mt-3">
                    @L["PrivacyRightsContact"] 
                    <a href="https://www.linkedin.com/in/riccardomerenda/" target="_blank" class="text-primary-600 dark:text-primary-400 hover:underline">LinkedIn</a>.
                </p>
            </section>

            <!-- Demo -->
            <section class="bg-amber-50 dark:bg-amber-900/20 rounded-xl p-4 border border-amber-200 dark:border-amber-800">
                <h2 class="text-lg font-semibold text-amber-800 dark:text-amber-200 mb-2 flex items-center gap-2">
                    <span class="text-xl">üéÆ</span> @L["PrivacyDemoNote"]
                </h2>
                <p class="text-amber-700 dark:text-amber-300 text-sm">
                    @L["PrivacyDemoText"]
                </p>
            </section>

            <!-- Open Source -->
            <section>
                <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-3 flex items-center gap-2">
                    <span class="text-2xl">üìñ</span> @L["PrivacyOpenSource"]
                </h2>
                <p class="text-gray-600 dark:text-gray-300">
                    @L["PrivacyOpenSourceText"] 
                    <a href="https://github.com/riccardomerenda/FamilyBalance" target="_blank" class="text-primary-600 dark:text-primary-400 hover:underline">GitHub</a>.
                </p>
            </section>

        </div>

        <!-- Footer -->
        <div class="mt-8 text-center">
            <a href="/Account/Login" class="inline-flex items-center gap-2 text-primary-600 dark:text-primary-400 hover:underline">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                @L["BackToLogin"]
            </a>
        </div>
    </div>
</div>

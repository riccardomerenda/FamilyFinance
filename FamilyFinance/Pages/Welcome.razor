@page "/welcome"
@layout EmptyLayout
@attribute [AllowAnonymous]
@using Microsoft.AspNetCore.Authorization
@inject IStringLocalizer<SharedResource> L
@inject NavigationManager Nav
@inject IWebHostEnvironment Env

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-primary-950 to-gray-900 text-white overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute -top-40 -right-40 w-96 h-96 bg-primary-500/20 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute top-1/3 -left-20 w-72 h-72 bg-accent-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
        <div class="absolute bottom-20 right-1/4 w-64 h-64 bg-emerald-500/15 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    </div>

    <!-- Header -->
    <header class="relative z-10 container mx-auto px-6 py-6">
        <nav class="flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary-500 to-accent-500 flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <span class="text-xl font-bold">FamilyFinance</span>
            </div>
            <div class="flex items-center gap-4">
                <a href="/Account/Login" class="px-4 py-2 text-white/80 hover:text-white transition-colors font-medium">
                    @L["Login"]
                </a>
                <a href="/Account/Login" class="px-5 py-2.5 bg-white text-gray-900 rounded-xl font-semibold hover:bg-gray-100 transition-colors">
                    @L["TryDemo"]
                </a>
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="relative z-10 container mx-auto px-6 py-20 md:py-32">
        <div class="max-w-4xl mx-auto text-center">
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur border border-white/10 mb-8">
                <span class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse"></span>
                <span class="text-sm text-white/80">Open Source • Self-Hosted Ready</span>
            </div>
            
            <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold leading-tight mb-6">
                @L["LandingHeroTitle"]
            </h1>
            
            <p class="text-xl md:text-2xl text-white/70 mb-10 max-w-2xl mx-auto">
                @L["LandingHeroSubtitle"]
            </p>
            
            <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
                <a href="/Account/Login" 
                   class="w-full sm:w-auto px-8 py-4 bg-gradient-to-r from-primary-500 to-accent-500 text-white rounded-xl font-semibold text-lg hover:opacity-90 transition-all shadow-lg shadow-primary-500/30 flex items-center justify-center gap-2">
                    <span>@L["TryDemo"]</span>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                    </svg>
                </a>
                <a href="#how-it-works" 
                   class="w-full sm:w-auto px-8 py-4 bg-white/10 backdrop-blur border border-white/20 text-white rounded-xl font-semibold text-lg hover:bg-white/20 transition-all flex items-center justify-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span>@L["WatchHow"]</span>
                </a>
            </div>
        </div>
        
        <!-- Dashboard Preview -->
        <div class="mt-20 relative">
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent to-transparent z-10 pointer-events-none"></div>
            <div class="bg-gray-800/50 backdrop-blur-xl rounded-2xl border border-white/10 p-2 shadow-2xl max-w-5xl mx-auto">
                <div class="bg-gray-900 rounded-xl overflow-hidden">
                    <!-- Mock Dashboard Header -->
                    <div class="flex items-center gap-2 px-4 py-3 border-b border-gray-800">
                        <div class="w-3 h-3 rounded-full bg-red-500"></div>
                        <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                        <div class="w-3 h-3 rounded-full bg-green-500"></div>
                        <span class="ml-4 text-gray-500 text-sm">familyfinance.app</span>
                    </div>
                    <!-- Mock Dashboard Content -->
                    <div class="p-6 grid grid-cols-3 gap-4">
                        <div class="col-span-2 bg-gray-800/50 rounded-xl p-4">
                            <div class="text-gray-400 text-sm mb-2">Patrimonio Totale</div>
                            <div class="text-3xl font-bold text-white mb-4">€ 125.430,00</div>
                            <!-- Mock Chart -->
                            <div class="h-32 flex items-end gap-1">
                                @for (int i = 0; i < 12; i++)
                                {
                                    var height = 40 + (i * 5) + (i % 2 == 0 ? 10 : 0);
                                    <div class="flex-1 bg-gradient-to-t from-primary-600 to-primary-400 rounded-t opacity-@((i + 1) * 8)" style="height: @(height)%;"></div>
                                }
                            </div>
                        </div>
                        <div class="space-y-4">
                            <div class="bg-emerald-500/20 border border-emerald-500/30 rounded-xl p-4">
                                <div class="text-emerald-400 text-sm">Liquidità</div>
                                <div class="text-xl font-bold text-white">€ 45.200</div>
                            </div>
                            <div class="bg-primary-500/20 border border-primary-500/30 rounded-xl p-4">
                                <div class="text-primary-400 text-sm">Investimenti</div>
                                <div class="text-xl font-bold text-white">€ 78.500</div>
                            </div>
                            <div class="bg-amber-500/20 border border-amber-500/30 rounded-xl p-4">
                                <div class="text-amber-400 text-sm">Obiettivi</div>
                                <div class="text-xl font-bold text-white">3 / 5</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="relative z-10 py-24 bg-black/30">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">Tutto quello che ti serve</h2>
                <p class="text-white/60 text-lg max-w-2xl mx-auto">Strumenti potenti ma semplici per tenere sotto controllo le finanze di tutta la famiglia</p>
            </div>
            
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
                <!-- Feature 1 -->
                <div class="group bg-white/5 backdrop-blur border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition-all">
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-primary-500 to-primary-600 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">@L["FeatureSnapshotsTitle"]</h3>
                    <p class="text-white/60">@L["FeatureSnapshotsDesc"]</p>
                </div>
                
                <!-- Feature 2 -->
                <div class="group bg-white/5 backdrop-blur border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition-all">
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-emerald-500 to-emerald-600 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">@L["FeatureGoalsTitle"]</h3>
                    <p class="text-white/60">@L["FeatureGoalsDesc"]</p>
                </div>
                
                <!-- Feature 3 -->
                <div class="group bg-white/5 backdrop-blur border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition-all">
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-amber-500 to-amber-600 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">@L["FeatureBudgetTitle"]</h3>
                    <p class="text-white/60">@L["FeatureBudgetDesc"]</p>
                </div>
                
                <!-- Feature 4 -->
                <div class="group bg-white/5 backdrop-blur border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition-all">
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-accent-500 to-accent-600 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">@L["FeatureChartsTitle"]</h3>
                    <p class="text-white/60">@L["FeatureChartsDesc"]</p>
                </div>
                
                <!-- Feature 5 -->
                <div class="group bg-white/5 backdrop-blur border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition-all">
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-pink-500 to-pink-600 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">@L["FeatureFamilyTitle"]</h3>
                    <p class="text-white/60">@L["FeatureFamilyDesc"]</p>
                </div>
                
                <!-- Feature 6 -->
                <div class="group bg-white/5 backdrop-blur border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition-all">
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-indigo-500 to-indigo-600 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">@L["FeatureSecurityTitle"]</h3>
                    <p class="text-white/60">@L["FeatureSecurityDesc"]</p>
                </div>
            </div>
        </div>
    </section>

    <!-- How it Works Section -->
    <section id="how-it-works" class="relative z-10 py-24">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">@L["HowItWorksTitle"]</h2>
                <p class="text-white/60 text-lg">Iniziare è semplicissimo</p>
            </div>
            
            <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
                <!-- Step 1 -->
                <div class="text-center">
                    <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-primary-500 to-accent-500 flex items-center justify-center mx-auto mb-6 text-2xl font-bold">
                        1
                    </div>
                    <h3 class="text-xl font-semibold mb-3">@L["HowItWorksStep1Title"]</h3>
                    <p class="text-white/60">@L["HowItWorksStep1Desc"]</p>
                </div>
                
                <!-- Arrow -->
                <div class="hidden md:flex items-center justify-center -mx-4">
                    <svg class="w-8 h-8 text-white/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                    </svg>
                </div>
                
                <!-- Step 2 -->
                <div class="text-center">
                    <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-primary-500 to-accent-500 flex items-center justify-center mx-auto mb-6 text-2xl font-bold">
                        2
                    </div>
                    <h3 class="text-xl font-semibold mb-3">@L["HowItWorksStep2Title"]</h3>
                    <p class="text-white/60">@L["HowItWorksStep2Desc"]</p>
                </div>
            </div>
            
            <div class="flex justify-center mt-8">
                <!-- Step 3 -->
                <div class="text-center max-w-sm">
                    <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-emerald-500 to-emerald-600 flex items-center justify-center mx-auto mb-6 text-2xl font-bold">
                        3
                    </div>
                    <h3 class="text-xl font-semibold mb-3">@L["HowItWorksStep3Title"]</h3>
                    <p class="text-white/60">@L["HowItWorksStep3Desc"]</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="relative z-10 py-24">
        <div class="container mx-auto px-6">
            <div class="max-w-4xl mx-auto bg-gradient-to-r from-primary-600 to-accent-600 rounded-3xl p-8 md:p-12 text-center relative overflow-hidden">
                <!-- Decorative elements -->
                <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
                <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/10 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>
                
                <div class="relative z-10">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">@L["ReadyToStart"]</h2>
                    <p class="text-white/80 text-lg mb-8 max-w-xl mx-auto">@L["ReadyToStartDesc"]</p>
                    
                    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
                        <a href="/Account/Login" 
                           class="w-full sm:w-auto px-8 py-4 bg-white text-primary-600 rounded-xl font-semibold text-lg hover:bg-gray-100 transition-all flex items-center justify-center gap-2">
                            <span>@L["TryDemo"]</span>
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                            </svg>
                        </a>
                        <a href="https://github.com/riccardomerenda/FamilyFinance" target="_blank" rel="noopener noreferrer"
                           class="w-full sm:w-auto px-8 py-4 bg-white/20 backdrop-blur border border-white/30 text-white rounded-xl font-semibold text-lg hover:bg-white/30 transition-all flex items-center justify-center gap-2">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                            </svg>
                            <span>GitHub</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="relative z-10 py-8 border-t border-white/10">
        <div class="container mx-auto px-6">
            <div class="flex flex-col md:flex-row items-center justify-between gap-4">
                <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-primary-500 to-accent-500 flex items-center justify-center">
                        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <span class="text-white/60 text-sm">© 2024 FamilyFinance. Open Source.</span>
                </div>
                <div class="flex items-center gap-6 text-sm">
                    <a href="/privacy" class="text-white/60 hover:text-white transition-colors">Privacy Policy</a>
                    <a href="https://github.com/riccardomerenda/FamilyFinance" target="_blank" rel="noopener noreferrer" class="text-white/60 hover:text-white transition-colors">GitHub</a>
                    <a href="https://www.linkedin.com/in/riccardomerenda/" target="_blank" rel="noopener noreferrer" class="text-white/60 hover:text-white transition-colors">LinkedIn</a>
                </div>
            </div>
        </div>
    </footer>
</div>

@code {
    protected override void OnInitialized()
    {
        // In development, redirect to login directly
        if (Env.IsDevelopment())
        {
            Nav.NavigateTo("/Account/Login");
        }
    }
}


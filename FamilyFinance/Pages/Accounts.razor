@page "/accounts"
@using AccountModel = FamilyFinance.Models.Account
@inject AppDbContext Db
@inject IStringLocalizer<SharedResource> L
@attribute [Authorize]

<div class="flex items-center justify-between mb-8 animate-in">
    <div>
        <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-100">@L["AccountsManagement"]</h1>
        <p class="text-gray-500 dark:text-gray-400 mt-1">@L["AccountsDescription"]</p>
    </div>
    <button @onclick="NewAccount" class="inline-flex items-center gap-2 px-5 py-3 bg-gradient-to-r from-primary-500 to-primary-600 text-white font-semibold rounded-xl hover:from-primary-600 hover:to-primary-700 transition-all shadow-lg shadow-primary-500/30 hover:shadow-xl hover:shadow-primary-500/40 hover:-translate-y-0.5">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        @L["NewAccount"]
    </button>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 animate-in delay-1">
    @{ var idx = 0; }
    @foreach (var a in _accounts)
    {
        var delayClass = $"delay-{Math.Min(idx++ % 5 + 1, 5)}";
        <div class="bento-card p-5 animate-in @delayClass group">
            <div class="flex items-start justify-between">
                <div class="flex items-center gap-4">
                    <div class="w-14 h-14 rounded-xl @GetCategoryColor(a.Category) flex items-center justify-center text-white font-bold text-lg transition-transform group-hover:scale-105">
                        @a.Name[..Math.Min(2, a.Name.Length)]
                    </div>
                    <div>
                        <p class="font-semibold text-gray-800 dark:text-gray-200 text-lg">@a.Name</p>
                        <div class="flex items-center gap-2 mt-1">
                            <span class="px-2 py-0.5 text-xs font-medium bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 rounded-full">@a.Category</span>
                            @if (a.IsInterest)
                            {
                                <span class="px-2 py-0.5 text-xs font-medium bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-400 rounded-full">@L["Interests"]</span>
                            }
                        </div>
                    </div>
                </div>
                <div class="flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                    <button @onclick="() => Edit(a)" class="p-2 text-gray-400 hover:text-primary-500 hover:bg-primary-50 dark:hover:bg-primary-900/30 rounded-lg transition-colors">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                        </svg>
                    </button>
                    <button @onclick="() => Delete(a)" class="p-2 text-gray-400 hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/30 rounded-lg transition-colors">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<!-- Modal with Glassmorphism -->
@if (_editing != null)
{
    <div class="fixed inset-0 bg-black/60 backdrop-blur-sm flex items-center justify-center z-50 p-4 animate-in" @onclick="() => _editing = null">
        <div class="bg-white/90 dark:bg-gray-900/90 backdrop-blur-xl rounded-2xl p-6 w-full max-w-md shadow-2xl border border-white/20 dark:border-gray-700/50" @onclick:stopPropagation="true">
            <h2 class="text-xl font-bold text-gray-800 dark:text-gray-200 mb-6">@L["EditAccount"]</h2>
            
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">@L["Name"]</label>
                    <InputText @bind-Value="_editing.Name" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">@L["Category"]</label>
                    <InputSelect @bind-Value="_editing.Category" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500">
                        @foreach (var c in Enum.GetValues<AccountCategory>())
                        {
                            <option value="@c">@c</option>
                        }
                    </InputSelect>
                </div>
                
                <div class="flex items-center gap-3">
                    <InputCheckbox @bind-Value="_editing.IsInterest" class="w-5 h-5 rounded border-gray-300 text-primary-500 focus:ring-primary-500" />
                    <label class="text-sm font-medium text-gray-700 dark:text-gray-300">@L["InterestAccount"]</label>
                </div>
            </div>

            <div class="flex gap-3 mt-6">
                <button @onclick="Save" class="flex-1 px-4 py-3 bg-gradient-to-r from-primary-500 to-primary-600 text-white font-semibold rounded-xl hover:from-primary-600 hover:to-primary-700 transition-all">
                    @L["Save"]
                </button>
                <button @onclick="() => _editing = null" class="px-4 py-3 text-gray-700 dark:text-gray-300 font-semibold rounded-xl hover:bg-gray-100 dark:hover:bg-gray-800 transition-all">
                    @L["Cancel"]
                </button>
            </div>
        </div>
    </div>
}

@code {
    List<AccountModel> _accounts = new();
    AccountModel? _editing;

    protected override void OnInitialized() => _accounts = Db.Accounts.OrderBy(a => a.Category).ThenBy(a => a.Name).ToList();
    
    string GetCategoryColor(AccountCategory cat) => cat switch
    {
        AccountCategory.Liquidity => "bg-gradient-to-br from-blue-500 to-blue-600",
        AccountCategory.Pension => "bg-gradient-to-br from-purple-500 to-purple-600",
        AccountCategory.Insurance => "bg-gradient-to-br from-green-500 to-green-600",
        _ => "bg-gradient-to-br from-gray-500 to-gray-600"
    };

    void NewAccount() => _editing = new AccountModel();
    void Edit(AccountModel a) => _editing = a;
    
    void Delete(AccountModel a)
    {
        Db.Accounts.Remove(a);
        Db.SaveChanges();
        OnInitialized();
    }
    
    void Save()
    {
        if (_editing!.Id == 0) Db.Accounts.Add(_editing);
        else Db.Accounts.Update(_editing);
        Db.SaveChanges();
        _editing = null;
        OnInitialized();
    }
}

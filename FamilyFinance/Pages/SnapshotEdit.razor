@code {
    [Parameter] public int? Id { get; set; }
    bool _loading = true;
    DateTime _date = DateTime.Today;
    List<Portfolio> _portfolios = new();
    int _familyId;

    class AccRow { public int Id; public string Name = ""; public bool IsInterest; public AccountCategory Category; public decimal Amount; public decimal ContributionBasis; }
    class InvRow { public string Name = ""; public decimal CostBasis; public decimal Value; public int? PortfolioId; }
    class RecRow { public string Desc = ""; public decimal Amount; public ReceivableStatus Status; }
    class ExpenseRow { 
        public int CategoryId; 
        public string Name = ""; 
        public string Icon = ""; 
        public string Color = ""; 
        public decimal Budget; 
        public decimal Amount; 
        public string? Notes; 
        
        public List<ParsedItem> GetParsedItems()
        {
            if (string.IsNullOrWhiteSpace(Notes)) return new();
            var list = new List<ParsedItem>();
            foreach (var part in Notes.Split(';'))
            {
                var trimmed = part.Trim();
                var match = System.Text.RegularExpressions.Regex.Match(trimmed, @"^(.*)\s\(([\d\.,]+)\s?â‚¬\)$");
                if (match.Success)
                {
                    if (decimal.TryParse(match.Groups[2].Value, System.Globalization.NumberStyles.Any, new System.Globalization.CultureInfo("it-IT"), out var amt))
                    {
                        list.Add(new ParsedItem { Original = trimmed, Desc = match.Groups[1].Value, Amount = amt });
                        continue;
                    }
                }
                if (!string.IsNullOrWhiteSpace(trimmed)) 
                     list.Add(new ParsedItem { Original = trimmed, Desc = trimmed, Amount = 0 });
            }
            return list;
        }
    }
    class ParsedItem { public string Original = ""; public string Desc = ""; public decimal Amount; }
    // Reusing ExpenseRow structure but simpler for Income, or just use same class? Let's use specific class for clarity but dynamic.
    class IncomeRow { 
        public int CategoryId;
        public string Name = "";
        public decimal Amount; 
        public string? Notes; 
    }

    List<AccRow> _accRows = new();
    List<InvRow> _invRows = new();
    List<RecRow> _recRows = new();
    List<ExpenseRow> _expenseRows = new();
    List<IncomeRow> _incomeRows = new();
    
    // Transaction aggregates from imported data
    Dictionary<int, decimal> _expenseAggregates = new();
    Dictionary<int, decimal> _incomeAggregates = new();

    List<AccRow> LiquidityAccounts => _accRows.Where(a => a.Category == AccountCategory.Liquidity).ToList();
    List<AccRow> PensionAccounts => _accRows.Where(a => a.Category is AccountCategory.Pension or AccountCategory.Insurance).ToList();

    protected override async Task OnInitializedAsync()
    {
        // Get family ID
        var authState = await AuthState.GetAuthenticationStateAsync();
        var userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        if (!string.IsNullOrEmpty(userId))
        {
            var user = await Auth.GetUserWithFamilyAsync(userId);
            if (user != null) _familyId = user.FamilyId;
        }
        
        var accounts = await AccountService.GetAllAsync(_familyId);
        _portfolios = await PortfolioService.GetAllAsync(_familyId);
        
        // Load budget categories
        var budgetCategories = await BudgetService.GetCategoriesAsync(_familyId);
        
        // Expenses
        _expenseRows = budgetCategories
            .Where(c => c.Type == CategoryType.Expense)
            .Select(c => new ExpenseRow
            {
                CategoryId = c.Id,
                Name = c.Name,
                Icon = c.Icon,
                Color = c.Color,
                Budget = c.MonthlyBudget,
                Amount = 0
            }).ToList();

        // Incomes - Initialize with 0 amount
        _incomeRows = budgetCategories
            .Where(c => c.Type == CategoryType.Income)
            .Select(c => new IncomeRow 
            { 
                CategoryId = c.Id,
                Name = c.Name,
                Amount = 0
            }).ToList();

        if (Id != null)
        {
            var s = await SnapshotService.GetByIdAsync(Id.Value);
            _date = s!.SnapshotDate.ToDateTime(TimeOnly.MinValue);
            _accRows = accounts.Select(a => {
                var line = s.Lines.FirstOrDefault(l => l.AccountId == a.Id);
                return new AccRow { 
                    Id = a.Id, Name = a.Name, IsInterest = a.IsInterest, Category = a.Category, 
                    Amount = line?.Amount ?? 0, 
                    ContributionBasis = line?.ContributionBasis ?? 0 
                };
            }).ToList();
            _recRows = s.Receivables.Select(r => new RecRow { Desc = r.Description, Amount = r.Amount, Status = r.Status }).ToList();
            
            // Load existing expenses
            var expenses = s.Expenses;
            foreach (var exp in expenses)
            {
                var row = _expenseRows.FirstOrDefault(e => e.CategoryId == exp.CategoryId);
                if (row != null)
                {
                    row.Amount = exp.Amount;
                    row.Notes = exp.Notes;
                }
            }
            
            // Load existing incomes
            var incomes = await SnapshotService.GetIncomesAsync(Id.Value);
            foreach (var inc in incomes)
            {
                var row = _incomeRows.FirstOrDefault(r => r.CategoryId == inc.CategoryId);
                if (row != null)
                {
                    row.Amount = inc.Amount;
                    row.Notes = inc.Notes;
                }
            }
        }
        else
        {
            // NEW SNAPSHOT: Load live pension ContributionBasis, but amounts from last snapshot
            var last = await SnapshotService.GetLatestAsync(_familyId);
            var pensionHoldings = await PensionHoldingService.GetAllAsync(_familyId);
            
            if (last != null)
            {
                _accRows = accounts.Select(a => {
                    var line = last.Lines.FirstOrDefault(l => l.AccountId == a.Id);
                    // For pension/insurance: use live ContributionBasis
                    var isPensionOrInsurance = a.Category is AccountCategory.Pension or AccountCategory.Insurance;
                    var liveHolding = pensionHoldings.FirstOrDefault(h => h.AccountId == a.Id);
                    
                    return new AccRow { 
                        Id = a.Id, Name = a.Name, IsInterest = a.IsInterest, Category = a.Category, 
                        Amount = line?.Amount ?? 0, 
                        ContributionBasis = isPensionOrInsurance && liveHolding != null 
                            ? liveHolding.ContributionBasis 
                            : (line?.ContributionBasis ?? 0)
                    };
                }).ToList();
                _recRows = last.Receivables.Where(r => r.Status == ReceivableStatus.Open).Select(r => new RecRow { Desc = r.Description, Amount = r.Amount, Status = r.Status }).ToList();
            }
            else
            {
                // No previous snapshot: use live data for pensions
                _accRows = accounts.Select(a => {
                    var liveHolding = pensionHoldings.FirstOrDefault(h => h.AccountId == a.Id);
                    return new AccRow { 
                        Id = a.Id, Name = a.Name, IsInterest = a.IsInterest, Category = a.Category, 
                        Amount = 0, 
                        ContributionBasis = liveHolding?.ContributionBasis ?? 0 
                    };
                }).ToList();
            }
        }
        
        // Always load investments from live holdings (section is read-only)
        await LoadLiveHoldings();
        
        // Load transaction aggregates for the selected month
        await LoadTransactionAggregates();
        
        _loading = false;
    }

    void AddRec() => _recRows.Add(new RecRow());

    async Task LoadLiveHoldings()
    {
        var holdings = await HoldingService.GetAllAsync(_familyId);
        _invRows = holdings
            .Where(h => h.Quantity > 0)
            .Select(h => new InvRow 
            { 
                Name = h.Ticker, 
                CostBasis = h.TotalCostBasis, 
                Value = h.MarketValue, 
                PortfolioId = h.PortfolioId 
            })
            .ToList();
    }

    async Task LoadTransactionAggregates()
    {
        var snapshotDate = DateOnly.FromDateTime(_date);
        var transactions = await TransactionService.GetByMonthAsync(_familyId, snapshotDate.Year, snapshotDate.Month);
        
        // Aggregate expenses by category
        _expenseAggregates = transactions
            .Where(t => t.Type == TransactionType.Expense && t.CategoryId.HasValue)
            .GroupBy(t => t.CategoryId!.Value)
            .ToDictionary(g => g.Key, g => g.Sum(t => t.Amount));
        
        // Aggregate incomes by category
        _incomeAggregates = transactions
            .Where(t => t.Type == TransactionType.Income && t.CategoryId.HasValue)
            .GroupBy(t => t.CategoryId!.Value)
            .ToDictionary(g => g.Key, g => g.Sum(t => t.Amount));
    }

    void RemoveNoteItem(ExpenseRow row, ParsedItem item)
    {
        if (item.Amount > 0)
        {
            row.Amount -= item.Amount;
        }

        if (!string.IsNullOrEmpty(row.Notes))
        {
            var parts = row.Notes.Split(';').Select(p => p.Trim()).ToList();
            var toRemove = parts.FirstOrDefault(p => p == item.Original);
            if (toRemove != null)
            {
                parts.Remove(toRemove);
                row.Notes = string.Join("; ", parts);
            }
        }
    }

    async Task Save()
    {
        try
        {
            var dateOnly = DateOnly.FromDateTime(_date);
            var accs = _accRows.Select(r => (r.Id, r.Amount, r.ContributionBasis)).ToList();
            var invs = _invRows.Select(r => (r.Name, r.CostBasis, r.Value, r.PortfolioId)).ToList();
            var recs = _recRows.Select(r => (r.Desc, r.Amount, r.Status, (DateOnly?)null)).ToList();

            var snapshotId = await SnapshotService.SaveAsync(_familyId, Id == 0 ? null : Id, dateOnly, accs, invs, recs);
            
            // Save expenses
            if (_expenseRows.Any())
            {
                var expenses = _expenseRows.Select(e => (e.CategoryId, e.Amount, e.Notes)).ToList();
                await SnapshotService.SaveExpensesAsync(snapshotId, expenses);
            }
            
            // Save incomes
            if (_incomeRows.Any(i => i.Amount > 0))
            {
                var incomes = _incomeRows.Select(i => (i.CategoryId, i.Amount, i.Notes)).ToList();
                await SnapshotService.SaveIncomesAsync(snapshotId, incomes);
            }
            
            // Sync ContributionBasis to live PensionHolding for pension/insurance accounts
            foreach (var acc in PensionAccounts)
            {
                await PensionHoldingService.UpdateContributionBasisAsync(acc.Id, acc.ContributionBasis);
            }
            
            Nav.NavigateTo("/dashboard?saved=true", forceLoad: true);
        }
        catch (Exception ex)
        {
            Toast.ShowError($"Errore durante il salvataggio: {ex.Message}");
            Console.WriteLine($"Save Error: {ex}");
        }
    }

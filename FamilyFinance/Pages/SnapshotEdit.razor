@page "/snapshots/new"
@page "/snapshots/{Id:int}"
@using System.Security.Claims
@using FamilyFinance.Services.Interfaces
@inject ISnapshotService SnapshotService
@inject IAccountService AccountService
@inject IPortfolioService PortfolioService
@inject IBudgetService BudgetService
@inject NavigationManager Nav
@inject IStringLocalizer<SharedResource> L
@inject AuthenticationStateProvider AuthState
@inject FamilyFinance.Services.AuthService Auth
@inject NotificationService Toast

<div class="max-w-5xl mx-auto">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            @(Id == null ? L["NewSnapshot"] : L["EditSnapshot"])
        </h1>
    </div>

    @if (_loading)
    {
        <div class="flex items-center justify-center h-64">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-500"></div>
        </div>
    }
    else
    {
        <!-- Date Picker -->
        <div class="bg-white dark:bg-gray-900 rounded-2xl p-6 border border-gray-200 dark:border-gray-800 mb-6">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">@L["ReferenceDate"]</label>
            <InputDate @bind-Value="_date" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500 focus:border-transparent" />
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Accounts & Liquidity -->
            <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-800/50">
                    <h2 class="font-semibold text-gray-800 dark:text-gray-200">@L["AccountsAndLiquidity"]</h2>
                </div>
                <div class="divide-y divide-gray-200 dark:divide-gray-800 max-h-96 overflow-y-auto">
                    @foreach (var r in LiquidityAccounts)
                    {
                        <div class="flex items-center justify-between p-4">
                            <div class="flex items-center gap-3">
                                <span class="font-medium text-gray-700 dark:text-gray-300 text-sm">@r.Name</span>
                                @if (r.IsInterest)
                                {
                                    <span class="px-2 py-0.5 text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded-full">@L["Interests"]</span>
                                }
                            </div>
                            <InputNumber @bind-Value="r.Amount" class="w-28 px-3 py-2 text-right rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500 text-sm" />
                        </div>
                    }
                </div>
            </div>

            <!-- Pension & Insurance -->
            <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800 bg-purple-50 dark:bg-purple-900/20">
                    <h2 class="font-semibold text-gray-800 dark:text-gray-200">@L["TabPension"]</h2>
                </div>
                <div class="p-4 space-y-3">
                    <!-- Header -->
                    <div class="grid grid-cols-3 gap-2 text-xs font-medium text-gray-500 dark:text-gray-400 px-1">
                        <div>@L["AccountName"]</div>
                        <div class="text-right">@L["Contributions"]</div>
                        <div class="text-right">@L["CurrentValue"]</div>
                    </div>
                    @foreach (var r in PensionAccounts)
                    {
                        var gl = r.Amount - r.ContributionBasis;
                        var pct = r.ContributionBasis > 0 ? (gl / r.ContributionBasis) * 100 : 0;
                        
                        <div class="p-3 rounded-lg bg-gray-50 dark:bg-gray-800 space-y-2">
                            <div class="grid grid-cols-3 gap-2 items-center">
                                <span class="font-medium text-gray-700 dark:text-gray-300 text-sm">@r.Name</span>
                                <InputNumber @bind-Value="r.ContributionBasis" class="w-full px-3 py-2 text-right rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 text-sm" placeholder="@L["Contributions"]" />
                                <InputNumber @bind-Value="r.Amount" class="w-full px-3 py-2 text-right rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 text-sm" placeholder="@L["CurrentValue"]" />
                            </div>
                            @if (r.ContributionBasis > 0)
                            {
                                <div class="text-right text-sm">
                                    <span class="text-gray-500 dark:text-gray-400">@L["GainLoss"]: </span>
                                    <span class="font-medium @(gl >= 0 ? "text-green-600 dark:text-green-400" : "text-red-600 dark:text-red-400")">
                                        @(gl >= 0 ? "+" : "")@gl.ToString("N0") € (@(pct >= 0 ? "+" : "")@pct.ToString("N2")%)
                                    </span>
                                </div>
                            }
                        </div>
                    }
                    
                    <!-- Pension Totals -->
                    @if (PensionAccounts.Any(p => p.ContributionBasis > 0))
                    {
                        var totalContrib = PensionAccounts.Sum(p => p.ContributionBasis);
                        var totalValue = PensionAccounts.Sum(p => p.Amount);
                        var totalGl = totalValue - totalContrib;
                        var totalPct = totalContrib > 0 ? (totalGl / totalContrib) * 100 : 0;
                        
                        <div class="mt-3 p-3 rounded-lg bg-purple-100 dark:bg-purple-900/30 flex items-center justify-between">
                            <span class="font-bold text-gray-800 dark:text-gray-200">@L["Total"]</span>
                            <div class="text-right">
                                <span class="text-sm text-gray-600 dark:text-gray-400">@totalContrib.ToString("N0") € → @totalValue.ToString("N0") €</span>
                                <span class="ml-2 font-bold @(totalGl >= 0 ? "text-green-600 dark:text-green-400" : "text-red-600 dark:text-red-400")">
                                    @(totalGl >= 0 ? "+" : "")@totalGl.ToString("N0") € (@(totalPct >= 0 ? "+" : "")@totalPct.ToString("N2")%)
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Credits -->
        <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 overflow-hidden mt-6">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-800/50 flex items-center justify-between">
                <h2 class="font-semibold text-gray-800 dark:text-gray-200">@L["CreditsToReceive"]</h2>
                <button @onclick="AddRec" class="text-sm font-medium text-primary-600 dark:text-primary-400 hover:text-primary-700">@L["AddCredit"]</button>
            </div>
            <div class="p-4 space-y-3 max-h-64 overflow-y-auto">
                @foreach (var r in _recRows)
                {
                    <div class="flex items-center gap-3">
                        <InputText @bind-Value="r.Desc" placeholder="@L["DescriptionPlaceholder"]" class="flex-1 px-3 py-2 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 text-sm" />
                        <InputNumber @bind-Value="r.Amount" class="w-24 px-3 py-2 text-right rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 text-sm" />
                        <button @onclick="() => _recRows.Remove(r)" class="p-2 text-red-500 hover:bg-red-50 dark:hover:bg-red-900/30 rounded-lg">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- Investments -->
        <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 overflow-hidden mt-6">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-800/50 flex items-center justify-between">
                <h2 class="font-semibold text-gray-800 dark:text-gray-200">@L["InvestmentsDirecta"]</h2>
                <button @onclick="AddInv" class="text-sm font-medium text-primary-600 dark:text-primary-400 hover:text-primary-700">@L["AddAsset"]</button>
            </div>
            <div class="p-4">
                <!-- Header -->
                <div class="grid grid-cols-12 gap-2 text-xs font-medium text-gray-500 dark:text-gray-400 px-1 mb-2">
                    <div class="col-span-2">@L["Portfolio"]</div>
                    <div class="col-span-3">@L["AssetName"]</div>
                    <div class="col-span-2 text-right">@L["CostBasis"]</div>
                    <div class="col-span-2 text-right">@L["CurrentValue"]</div>
                    <div class="col-span-2 text-right">@L["GainLoss"]</div>
                    <div class="col-span-1"></div>
                </div>
                
                <div class="space-y-2">
                    @foreach (var i in _invRows)
                    {
                        var gl = i.Value - i.CostBasis;
                        var pct = i.CostBasis > 0 ? (gl / i.CostBasis) * 100 : 0;
                        var portfolioColor = _portfolios.FirstOrDefault(p => p.Id == i.PortfolioId)?.Color ?? "#6b7280";
                        
                        <div class="grid grid-cols-12 gap-2 items-center p-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800/50">
                            <div class="col-span-2">
                                <select @bind="i.PortfolioId" class="w-full px-2 py-2 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 text-xs" style="border-left: 3px solid @portfolioColor">
                                    <option value="">@L["NoPortfolio"]</option>
                                    @foreach (var p in _portfolios)
                                    {
                                        <option value="@p.Id">@p.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-span-3">
                                <InputText @bind-Value="i.Name" placeholder="@L["AssetNamePlaceholder"]" class="w-full px-3 py-2 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 text-sm" />
                            </div>
                            <div class="col-span-2">
                                <InputNumber @bind-Value="i.CostBasis" class="w-full px-3 py-2 text-right rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 text-sm" />
                            </div>
                            <div class="col-span-2">
                                <InputNumber @bind-Value="i.Value" class="w-full px-3 py-2 text-right rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 text-sm" />
                            </div>
                            <div class="col-span-2 text-right">
                                @if (i.CostBasis > 0)
                                {
                                    <span class="text-sm font-medium @(gl >= 0 ? "text-green-600 dark:text-green-400" : "text-red-600 dark:text-red-400")">
                                        @(gl >= 0 ? "+" : "")@pct.ToString("N2")%
                                    </span>
                                }
                            </div>
                            <div class="col-span-1 flex justify-end">
                                <button @onclick="() => _invRows.Remove(i)" class="p-1.5 text-red-500 hover:bg-red-50 dark:hover:bg-red-900/30 rounded-lg">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    }
                </div>

                <!-- Totals by Portfolio -->
                @if (_invRows.Any())
                {
                    <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700 space-y-2">
                        @foreach (var group in _invRows.GroupBy(x => x.PortfolioId))
                        {
                            var portfolio = _portfolios.FirstOrDefault(p => p.Id == group.Key);
                            var totalCost = group.Sum(x => x.CostBasis);
                            var totalValue = group.Sum(x => x.Value);
                            var totalGl = totalValue - totalCost;
                            var totalPct = totalCost > 0 ? (totalGl / totalCost) * 100 : 0;
                            var color = portfolio?.Color ?? "#6b7280";
                            
                            <div class="flex items-center justify-between p-2 rounded-lg" style="background-color: @(color)10; border-left: 3px solid @color">
                                <span class="font-medium text-sm text-gray-700 dark:text-gray-300">
                                    @(portfolio?.Name ?? L["NoPortfolio"])
                                </span>
                                <div class="flex items-center gap-4 text-sm">
                                    <span class="text-gray-500 dark:text-gray-400">@totalCost.ToString("N0") € → @totalValue.ToString("N0") €</span>
                                    <span class="font-bold @(totalGl >= 0 ? "text-green-600 dark:text-green-400" : "text-red-600 dark:text-red-400")">
                                        @(totalGl >= 0 ? "+" : "")@totalGl.ToString("N0") € (@(totalPct >= 0 ? "+" : "")@totalPct.ToString("N2")%)
                                    </span>
                                </div>
                            </div>
                        }
                        
                        <!-- Grand Total -->
                        @{
                            var grandCost = _invRows.Sum(x => x.CostBasis);
                            var grandValue = _invRows.Sum(x => x.Value);
                            var grandGl = grandValue - grandCost;
                            var grandPct = grandCost > 0 ? (grandGl / grandCost) * 100 : 0;
                        }
                        <div class="flex items-center justify-between p-3 rounded-lg bg-gray-100 dark:bg-gray-800">
                            <span class="font-bold text-gray-800 dark:text-gray-200">@L["Total"]</span>
                            <div class="flex items-center gap-4">
                                <span class="font-semibold text-gray-700 dark:text-gray-300">@grandCost.ToString("N0") € → @grandValue.ToString("N0") €</span>
                                <span class="font-bold text-lg @(grandGl >= 0 ? "text-green-600 dark:text-green-400" : "text-red-600 dark:text-red-400")">
                                    @(grandGl >= 0 ? "+" : "")@grandGl.ToString("N0") € (@(grandPct >= 0 ? "+" : "")@grandPct.ToString("N2")%)
                                </span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Incomes -->
        <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 overflow-hidden mt-6">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800 bg-emerald-50 dark:bg-emerald-900/20 flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <svg class="w-5 h-5 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <h2 class="font-semibold text-gray-800 dark:text-gray-200">@L["Incomes"]</h2>
                </div>
            </div>
            <div class="p-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                    @foreach (var inc in _incomeRows)
                    {
                        <div class="p-3 rounded-xl bg-gray-50 dark:bg-gray-800 flex items-center gap-3">
                            <div class="w-10 h-10 rounded-lg flex items-center justify-center text-xl shrink-0 bg-emerald-100 dark:bg-emerald-900/30 text-emerald-600 dark:text-emerald-400 font-bold">
                                @(inc.Name.Length > 0 ? inc.Name.Substring(0, 1) : "?")
                            </div>
                            <div class="flex-1 min-w-0">
                                <div class="flex items-center justify-between mb-1">
                                    <span class="font-medium text-gray-700 dark:text-gray-300 text-sm truncate">@inc.Name</span>
                                </div>
                                <InputNumber @bind-Value="inc.Amount" class="w-full px-3 py-2 text-right rounded-lg border text-sm border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-emerald-500" />
                                
                                <!-- Notes -->
                                <div class="mt-2">
                                    <InputText @bind-Value="inc.Notes" 
                                              class="w-full px-3 py-2 text-xs rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-700 dark:text-gray-300 focus:ring-2 focus:ring-emerald-500 focus:border-transparent shadow-sm placeholder-gray-400" 
                                              placeholder="@L["Notes"]" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
                
                <!-- Income Totals -->
                @{
                    var totalIncome = _incomeRows.Sum(e => e.Amount);
                }
                @if (totalIncome > 0)
                {
                    <div class="mt-4 p-4 rounded-xl bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-between">
                        <div>
                            <span class="font-bold text-gray-800 dark:text-gray-200">@L["TotalIncome"]</span>
                        </div>
                        <div class="text-right">
                            <span class="text-xl font-bold text-emerald-600 dark:text-emerald-400">
                                @totalIncome.ToString("N0") €
                            </span>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Monthly Expenses -->
        @if (_expenseRows.Any())
        {
            <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 overflow-hidden mt-6">
                <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800 bg-amber-50 dark:bg-amber-900/20 flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                        </svg>
                        <h2 class="font-semibold text-gray-800 dark:text-gray-200">@L["MonthlyExpenses"]</h2>
                    </div>
                    <a href="/budget" class="text-sm font-medium text-amber-600 dark:text-amber-400 hover:text-amber-700">@L["ManageCategories"]</a>
                </div>
                <div class="p-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                        @foreach (var exp in _expenseRows)
                        {
                            var pct = exp.Budget > 0 ? (exp.Amount / exp.Budget) * 100 : 0;
                            var isOver = exp.Amount > exp.Budget && exp.Budget > 0;
                            
                            <div class="p-3 rounded-xl bg-gray-50 dark:bg-gray-800 flex items-center gap-3">
                                <div class="w-10 h-10 rounded-lg flex items-center justify-center text-xl shrink-0" style="background-color: @(exp.Color)20">
                                    @exp.Icon
                                </div>
                                <div class="flex-1 min-w-0">
                                    <div class="flex items-center justify-between mb-1">
                                        <span class="font-medium text-gray-700 dark:text-gray-300 text-sm truncate">@exp.Name</span>
                                        @if (exp.Budget > 0)
                                        {
                                            <span class="text-xs text-gray-500 dark:text-gray-400">/ @exp.Budget.ToString("N0") €</span>
                                        }
                                    </div>
                                    @{
                                        var inputClass = isOver 
                                            ? "w-full px-3 py-2 text-right rounded-lg border text-sm border-red-300 dark:border-red-700 bg-red-50 dark:bg-red-900/20 text-gray-900 dark:text-gray-100"
                                            : "w-full px-3 py-2 text-right rounded-lg border text-sm border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100";
                                    }
                                    <InputNumber @bind-Value="exp.Amount" class="@inputClass" />
                                    @if (exp.Budget > 0 && exp.Amount > 0)
                                    {
                                        var barClass = isOver ? "bg-red-500" : pct > 80 ? "bg-amber-500" : "bg-green-500";
                                        <div class="mt-2 h-1.5 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                                            <div class="h-full rounded-full transition-all @barClass" style="width: @Math.Min(100, pct)%"></div>
                                        </div>
                                    }
                                    
                                    <!-- Editable Notes -->
                                    <div class="mt-3">
                                        <label class="text-xs font-medium text-gray-500 dark:text-gray-400 ml-1 block mb-1">@L["Notes"] / @L["Details"]</label>
                                        
                                        <!-- Parsed Items (Erasable) -->
                                        @if (!string.IsNullOrWhiteSpace(exp.Notes))
                                        {
                                            <div class="flex flex-wrap gap-2 mb-2">
                                                @foreach(var item in exp.GetParsedItems())
                                                {
                                                    <div class="px-2 py-1 bg-amber-50 dark:bg-amber-900/20 border border-amber-100 dark:border-amber-900/30 rounded-lg text-xs flex items-center gap-1 group">
                                                        <span class="text-gray-700 dark:text-gray-300">@item.Desc</span>
                                                        @if(item.Amount > 0) { <span class="font-bold text-amber-600 dark:text-amber-400">@item.Amount.ToString("N2") €</span> }
                                                        <button type="button" @onclick="() => RemoveNoteItem(exp, item)" class="text-gray-400 hover:text-red-500 font-bold ml-1 transition-colors p-0.5 rounded hover:bg-white dark:hover:bg-gray-800">
                                                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                                                        </button>
                                                    </div>
                                                }
                                            </div>
                                        }

                                        <InputText @bind-Value="exp.Notes" 
                                                  class="w-full px-3 py-2 text-xs rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-700 dark:text-gray-300 focus:ring-2 focus:ring-amber-500 focus:border-transparent shadow-sm placeholder-gray-400" 
                                                  placeholder="@L["DescriptionPlaceholder"]" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <!-- Expense Totals -->
                    @{
                        var totalExpenses = _expenseRows.Sum(e => e.Amount);
                        var totalBudget = _expenseRows.Sum(e => e.Budget);
                        var totalDiff = totalBudget - totalExpenses;
                        var totalPct = totalBudget > 0 ? (totalExpenses / totalBudget) * 100 : 0;
                    }
                    @if (totalExpenses > 0 || totalBudget > 0)
                    {
                        <div class="mt-4 p-4 rounded-xl @(totalDiff < 0 ? "bg-red-100 dark:bg-red-900/30" : "bg-green-100 dark:bg-green-900/30") flex items-center justify-between">
                            <div>
                                <span class="font-bold text-gray-800 dark:text-gray-200">@L["TotalExpenses"]</span>
                                @if (totalBudget > 0)
                                {
                                    <span class="text-sm text-gray-600 dark:text-gray-400 ml-2">(@totalPct.ToString("N0")% @L["OfBudget"])</span>
                                }
                            </div>
                            <div class="text-right">
                                <span class="text-xl font-bold @(totalDiff < 0 ? "text-red-600 dark:text-red-400" : "text-green-600 dark:text-green-400")">
                                    @totalExpenses.ToString("N0") €
                                </span>
                                @if (totalBudget > 0)
                                {
                                    <span class="text-sm text-gray-600 dark:text-gray-400 ml-2">/ @totalBudget.ToString("N0") €</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {

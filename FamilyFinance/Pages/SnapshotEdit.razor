                                    }
                                    <InputNumber @bind-Value="exp.Amount" class="@inputClass" />
                                    
                                    @* Combined total *@
                                    @if (importedAmount > 0 && exp.Amount > 0)
                                    {
                                        <div class="text-xs text-gray-600 dark:text-gray-400 mt-1 font-medium">
                                            @L["CategoryTotal"]: @totalAmount.ToString("N0") â‚¬
                                        </div>

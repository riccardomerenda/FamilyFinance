@code {
    bool _loading = true;
    int _familyId;
    List<SnapshotData> _snapshots = new();
    List<GoalProjection> _goals = new();
    
    // Current stats
    decimal _currentTotal;
    DateOnly _latestDate;
    decimal _avgMonthlyGrowth;
    decimal _avgMonthlyGrowthPercent;
    decimal _projectedOneYear;
    
    // Projection chart
    int _projectionYears = 5;
    object? _projectionChartConfig;
    
    // When will I reach calculator
    decimal _targetAmount = 100000;
    int _timeToTargetMonths;
    int _timeToTargetYears;
    int _timeToTargetRemainingMonths;
    DateTime _estimatedTargetDate;
    
    // What-if simulator
    decimal _monthlyContribution = 500;
    int _whatIfYears = 5;
    decimal _whatIfResult;
    decimal _whatIfContributions;
    decimal _whatIfGrowth;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthState.GetAuthenticationStateAsync();
        var userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        if (!string.IsNullOrEmpty(userId))
        {
            var user = await Finance.Auth.GetUserWithFamilyAsync(userId);
            if (user != null) _familyId = user.FamilyId;
        }

        await LoadData();
        _loading = false;
    }

    async Task LoadData()
    {
        // OPTIMIZED: Single query instead of N+1
        var summaries = await Finance.GetSnapshotsWithTotalsAsync(_familyId);
        _snapshots = summaries.Select(s => new SnapshotData(s.Date, s.GrandTotal)).ToList();

        if (_snapshots.Count >= 2)
        {
            CalculateStats();
            BuildProjectionChart();
            CalculateTimeToTarget();
            CalculateWhatIf();
            await LoadGoalsProjection();
        }
    }

    void CalculateStats()
    {
        var latest = _snapshots.Last();
        var first = _snapshots.First();
        
        _currentTotal = latest.Total;
        _latestDate = latest.Date;
        
        // Calculate average monthly growth
        var totalMonths = ((latest.Date.Year - first.Date.Year) * 12) + latest.Date.Month - first.Date.Month;
        if (totalMonths > 0)
        {
            var totalGrowth = latest.Total - first.Total;
            _avgMonthlyGrowth = totalGrowth / totalMonths;
            _avgMonthlyGrowthPercent = first.Total > 0 
                ? (decimal)Math.Pow((double)(latest.Total / first.Total), 1.0 / totalMonths) - 1 
                : 0;
            _avgMonthlyGrowthPercent *= 100;
        }
        
        // Project one year
        _projectedOneYear = _currentTotal * (decimal)Math.Pow(1 + (double)(_avgMonthlyGrowthPercent / 100), 12);
    }

    void BuildProjectionChart()
    {
        var historicalLabels = _snapshots.Select(s => s.Date.ToString("MM/yy")).ToList();
        var historicalData = _snapshots.Select(s => s.Total).ToList();
        
        // Generate future projections
        var projectionLabels = new List<string>();
        var projectionData = new List<decimal?>();
        
        var lastDate = _latestDate;
        var lastValue = _currentTotal;
        var monthlyRate = 1 + (_avgMonthlyGrowthPercent / 100);
        
        for (int i = 1; i <= _projectionYears * 12; i++)
        {
            var futureDate = lastDate.AddMonths(i);
            projectionLabels.Add(futureDate.ToString("MM/yy"));
            lastValue *= monthlyRate;
            projectionData.Add(Math.Round(lastValue, 0));
        }
        
        // Combine labels
        var allLabels = historicalLabels.Concat(projectionLabels).ToList();
        
        // Historical data with nulls for future
        var historicalSeries = historicalData.Select(d => (decimal?)d).ToList();
        historicalSeries.AddRange(Enumerable.Repeat((decimal?)null, projectionLabels.Count));
        
        // Projection data with nulls for past (connect from last historical point)
        var projectionSeries = Enumerable.Repeat((decimal?)null, historicalLabels.Count - 1).ToList();
        projectionSeries.Add(_currentTotal); // Connection point
        projectionSeries.AddRange(projectionData);

        _projectionChartConfig = new
        {
            type = "line",
            data = new
            {
                labels = allLabels,
                datasets = new object[]
                {
                    new { 
                        label = L["HistoricalData"].Value, 
                        data = historicalSeries, 
                        borderColor = "#6366f1",
                        backgroundColor = "rgba(99, 102, 241, 0.1)",
                        fill = true,
                        tension = 0.4,
                        pointRadius = 3
                    },
                    new { 
                        label = L["Projection"].Value, 
                        data = projectionSeries, 
                        borderColor = "#10b981",
                        backgroundColor = "rgba(16, 185, 129, 0.1)",
                        borderDash = new[] { 5, 5 },
                        fill = true,
                        tension = 0.4,
                        pointRadius = 0
                    }
                }
            },
            options = new
            {
                responsive = true,
                maintainAspectRatio = false,
                plugins = new { legend = new { position = "top" } },
                scales = new { y = new { beginAtZero = false } }
            }
        };
    }

    void SetProjectionYears(int years)
    {
        _projectionYears = years;
        BuildProjectionChart();
        StateHasChanged();
    }

    void CalculateTimeToTarget()
    {
        if (_targetAmount <= _currentTotal || _avgMonthlyGrowthPercent <= 0)
        {
            _timeToTargetMonths = 0;
            return;
        }

        var monthlyRate = (double)(_avgMonthlyGrowthPercent / 100);
        if (monthlyRate <= 0) return;
        
        // Using compound growth formula: FV = PV * (1 + r)^n
        // n = ln(FV/PV) / ln(1 + r)
        var ratio = (double)(_targetAmount / _currentTotal);
        _timeToTargetMonths = (int)Math.Ceiling(Math.Log(ratio) / Math.Log(1 + monthlyRate));
        
        _timeToTargetYears = _timeToTargetMonths / 12;
        _timeToTargetRemainingMonths = _timeToTargetMonths % 12;
        _estimatedTargetDate = DateTime.Today.AddMonths(_timeToTargetMonths);
    }

    void CalculateWhatIf()
    {
        if (_monthlyContribution <= 0 || _whatIfYears <= 0)
        {
            _whatIfResult = 0;
            return;
        }

        var months = _whatIfYears * 12;
        var monthlyRate = 1 + (_avgMonthlyGrowthPercent / 100);
        
        // Future value of current wealth with compound growth
        var futureCurrentWealth = _currentTotal * (decimal)Math.Pow((double)monthlyRate, months);
        
        // Future value of monthly contributions (annuity formula)
        decimal futureContributions = 0;
        if (_avgMonthlyGrowthPercent > 0)
        {
            futureContributions = _monthlyContribution * (decimal)((Math.Pow((double)monthlyRate, months) - 1) / ((double)monthlyRate - 1));
        }
        else
        {
            futureContributions = _monthlyContribution * months;
        }
        
        _whatIfContributions = _monthlyContribution * months;
        _whatIfResult = futureCurrentWealth + futureContributions;
        _whatIfGrowth = _whatIfResult - _currentTotal - _whatIfContributions;
    }

    async Task LoadGoalsProjection()
    {
        var goals = await Finance.GetGoalsAsync(_familyId);
        _goals = new List<GoalProjection>();
        
        foreach (var g in goals.Where(g => !g.IsCompleted))
        {
            var missing = g.Target - g.AllocatedAmount;
            int monthsToGoal = 0;
            
            if (_avgMonthlyGrowth > 0 && missing > 0)
            {
                monthsToGoal = (int)Math.Ceiling(missing / _avgMonthlyGrowth);
            }
            
            _goals.Add(new GoalProjection
            {
                Name = g.Name,
                Target = g.Target,
                Allocated = g.AllocatedAmount,
                Missing = missing,
                MonthsToGoal = monthsToGoal,
                EstimatedDate = DateTime.Today.AddMonths(monthsToGoal)
            });
        }
        
        // Add completed goals
        foreach (var g in goals.Where(g => g.IsCompleted))
        {
            _goals.Add(new GoalProjection
            {
                Name = g.Name,
                Target = g.Target,
                Allocated = g.AllocatedAmount,
                Missing = 0,
                MonthsToGoal = 0,
                EstimatedDate = DateTime.Today
            });
        }
    }

    record SnapshotData(DateOnly Date, decimal Total);
    
    class GoalProjection
    {
        public string Name { get; set; } = "";
        public decimal Target { get; set; }
        public decimal Allocated { get; set; }
        public decimal Missing { get; set; }
        public int MonthsToGoal { get; set; }
        public DateTime EstimatedDate { get; set; }
    }

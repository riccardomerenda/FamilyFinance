@page "/goals"
@using System.Security.Claims
@using FamilyFinance.Services
@using FamilyFinance.Components
@inject FinanceService Finance
@inject IStringLocalizer<SharedResource> L
@inject AuthenticationStateProvider AuthState
@inject NotificationService Toast
@attribute [Authorize]

<div class="flex items-center justify-between mb-8 animate-in">
    <div>
        <div class="flex items-center gap-2">
            <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-100">@L["FinancialGoals"]</h1>
            <HelpTooltip Title="@L["Goals"]" Content="@L["HelpGoals"]" />
        </div>
        <p class="text-gray-500 dark:text-gray-400 mt-1">@L["GoalsDescription"]</p>
    </div>
    <button @onclick="NewGoal" class="inline-flex items-center gap-2 px-5 py-3 bg-gradient-to-r from-primary-500 to-primary-600 text-white font-semibold rounded-xl hover:from-primary-600 hover:to-primary-700 transition-all shadow-lg shadow-primary-500/30 hover:shadow-xl hover:shadow-primary-500/40 hover:-translate-y-0.5">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        @L["NewGoal"]
    </button>
</div>

@if (_goals.Any())
{
    <!-- Allocation Summary with Bento Grid -->
    var totalAllocated = _goals.Sum(g => g.AllocatedAmount);
    var totalTargets = _goals.Sum(g => g.Target);
    var totalWealth = _t?.ProjectedTotal ?? 0;
    var unallocated = totalWealth - totalAllocated;
    var completedCount = _goals.Count(g => g.IsCompleted);
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <div class="bento-card p-5 animate-in delay-1">
            <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 rounded-xl bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
                    <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">@L["TotalWealth"]</p>
            </div>
            <p class="text-2xl font-bold text-gray-900 dark:text-white money">@totalWealth.ToString("N0") ‚Ç¨</p>
        </div>
        <div class="bento-card p-5 animate-in delay-2">
            <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 rounded-xl bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center">
                    <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">@L["TotalAllocated"]</p>
            </div>
            <p class="text-2xl font-bold text-primary-600 dark:text-primary-400 money">@totalAllocated.ToString("N0") ‚Ç¨</p>
        </div>
        <div class="bento-card p-5 animate-in delay-3">
            <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 rounded-xl @(unallocated >= 0 ? "bg-emerald-100 dark:bg-emerald-900/30" : "bg-red-100 dark:bg-red-900/30") flex items-center justify-center">
                    <svg class="w-5 h-5 @(unallocated >= 0 ? "text-emerald-600 dark:text-emerald-400" : "text-red-600 dark:text-red-400")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                    </svg>
                </div>
                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">@L["Unallocated"]</p>
            </div>
            <p class="text-2xl font-bold @(unallocated >= 0 ? "text-emerald-600 dark:text-emerald-400" : "text-red-600 dark:text-red-400") money">@unallocated.ToString("N0") ‚Ç¨</p>
        </div>
        <div class="bento-card p-5 @(totalAllocated >= totalTargets ? "hero-gradient" : "bg-gradient-to-br from-amber-500 to-orange-600") text-white animate-in delay-4">
            <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 rounded-xl bg-white/20 flex items-center justify-center">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                </div>
                <p class="text-sm font-medium text-white/80">@L["TotalTargets"]</p>
            </div>
            <p class="text-2xl font-bold money">@totalTargets.ToString("N0") ‚Ç¨</p>
            <p class="text-xs text-white/70 mt-2">@completedCount/@_goals.Count @L["Completed"]</p>
        </div>
    </div>
}

@if (!_goals.Any())
{
    <div class="bento-card text-center py-16 animate-in">
        <div class="w-20 h-20 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-700 dark:text-gray-300 mb-2">@L["NoGoalsMessage"]</h3>
        <p class="text-gray-500 dark:text-gray-400 mb-4">@L["NoGoalsHint"]</p>
    </div>
}
else
{
    var idx = 0;
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var g in _goals.OrderBy(x => x.Priority).ThenBy(x => x.Deadline))
        {
            var pct = g.ProgressPercent;
            var monthsLeft = g.MonthsUntilDeadline;
            var monthlyNeeded = monthsLeft > 0 && g.Missing > 0 ? g.Missing / monthsLeft : 0;
            var delayClass = $"delay-{Math.Min(idx++ % 5 + 1, 5)}";

            <div class="bento-card p-6 animate-in @delayClass @(g.IsCompleted ? "ring-2 ring-emerald-500 glow-emerald" : "")">
                <!-- Header with Priority Badge -->
                <div class="flex items-start justify-between mb-4">
                    <div class="flex-1">
                        <div class="flex items-center gap-2 mb-1">
                            <span class="px-2 py-0.5 text-xs font-semibold rounded-full 
                                @(g.Priority == GoalPriority.High ? "bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400" : 
                                  g.Priority == GoalPriority.Medium ? "bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400" : 
                                  "bg-gray-100 text-gray-600 dark:bg-gray-800 dark:text-gray-400")">
                                @L[$"Priority{g.Priority}"]
                            </span>
                        </div>
                        <h3 class="font-bold text-gray-800 dark:text-gray-200 text-lg">@g.Name</h3>
                    </div>
                    <div class="flex gap-1">
                        <button @onclick="() => Edit(g)" class="p-2 text-gray-400 hover:text-primary-500 hover:bg-primary-50 dark:hover:bg-primary-900/30 rounded-lg transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                            </svg>
                        </button>
                        <button @onclick="() => Del(g.Id)" class="p-2 text-gray-400 hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/30 rounded-lg transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Progress Bar -->
                <div class="mb-4">
                    <div class="flex items-center justify-between text-sm mb-1">
                        <span class="text-gray-500 dark:text-gray-400">@L["Progress"]</span>
                        <span class="font-semibold @(g.IsCompleted ? "text-green-500" : "text-gray-700 dark:text-gray-300")">@pct.ToString("N0")%</span>
                    </div>
                    <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                        <div class="h-full rounded-full transition-all duration-500 @(g.IsCompleted ? "bg-green-500" : pct >= 50 ? "bg-amber-500" : "bg-primary-500")" style="width: @pct%"></div>
                    </div>
                </div>

                <!-- Allocated vs Target -->
                <div class="flex items-center justify-between mb-4">
                    <div>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white money">@g.AllocatedAmount.ToString("N0") ‚Ç¨</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">@L["GoalOf"] <span class="money">@g.Target.ToString("N0") ‚Ç¨</span></p>
                    </div>
                    @if (g.IsCompleted)
                    {
                        <div class="w-12 h-12 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center">
                            <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                    }
                </div>

                <!-- Missing Amount & Monthly Projection -->
                @if (!g.IsCompleted)
                {
                    <div class="pt-4 border-t border-gray-200 dark:border-gray-700 space-y-2">
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-gray-500 dark:text-gray-400">@L["MissingAmount"]</span>
                            <span class="font-semibold text-gray-700 dark:text-gray-300 money">@g.Missing.ToString("N0") ‚Ç¨</span>
                        </div>
                        
                        @if (g.Deadline.HasValue)
                        {
                            <div class="flex items-center justify-between text-sm">
                                <span class="text-gray-500 dark:text-gray-400">@L["Deadline"]</span>
                                <span class="font-medium text-gray-700 dark:text-gray-300">@g.DeadlineDisplay</span>
                            </div>
                            
                            @if (monthsLeft > 0)
                            {
                                <div class="flex items-center justify-between text-sm">
                                    <span class="text-gray-500 dark:text-gray-400">@L["TimeRemaining"]</span>
                                    <span class="font-medium @(monthsLeft <= 6 ? "text-red-500" : monthsLeft <= 12 ? "text-amber-500" : "text-gray-700 dark:text-gray-300")">
                                        @monthsLeft @L["Months"]
                                    </span>
                                </div>
                                
                                @if (g.ShowMonthlyTarget)
                                {
                                    <div class="mt-3 p-3 rounded-xl bg-primary-50 dark:bg-primary-900/20 border border-primary-200 dark:border-primary-800">
                                        <div class="flex items-center justify-between">
                                            <span class="text-sm text-primary-700 dark:text-primary-300">@L["MonthlyNeeded"]</span>
                                            <span class="text-lg font-bold text-primary-600 dark:text-primary-400 money">@monthlyNeeded.ToString("N0") ‚Ç¨/@L["Month"]</span>
                                        </div>
                                    </div>
                                }
                            }
                            else if (monthsLeft == 0)
                            {
                                <div class="mt-3 p-3 rounded-xl bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800">
                                    <p class="text-sm font-medium text-red-600 dark:text-red-400">‚ö†Ô∏è @L["DeadlineReached"]</p>
                                </div>
                            }
                        }
                    </div>
                }
                else
                {
                    <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
                        <div class="p-3 rounded-xl bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800">
                            <p class="text-sm font-medium text-green-600 dark:text-green-400 text-center">üéâ @L["GoalCompleted"]</p>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
}

<!-- Modal with Glassmorphism -->
@if (_editing != null)
{
    <div class="fixed inset-0 bg-black/60 backdrop-blur-sm flex items-center justify-center z-50 p-4 animate-in" @onclick="() => _editing = null">
        <div class="bg-white/90 dark:bg-gray-900/90 backdrop-blur-xl rounded-2xl p-6 w-full max-w-md shadow-2xl border border-white/20 dark:border-gray-700/50" @onclick:stopPropagation="true">
            <h2 class="text-xl font-bold text-gray-800 dark:text-gray-200 mb-6">@(_editing.Id == 0 ? L["NewGoal"] : L["EditGoal"])</h2>
            
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">@L["Name"]</label>
                    <input @bind="_editing.Name" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500" />
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">@L["Target"] (‚Ç¨)</label>
                        <input type="number" @bind="_editing.Target" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">@L["AllocatedAmount"] (‚Ç¨)</label>
                        <input type="number" @bind="_editing.AllocatedAmount" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500" />
                    </div>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">@L["Deadline"] (YYYY-MM)</label>
                    <input type="text" @bind="_deadlineInput" placeholder="2026-12" pattern="\d{4}-\d{2}" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">@L["Priority"]</label>
                    <div class="flex gap-2">
                        @foreach (var p in Enum.GetValues<GoalPriority>())
                        {
                            var isSelected = _editing.Priority == p;
                            var btnClass = p == GoalPriority.High 
                                ? (isSelected ? "bg-red-500 text-white" : "bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400") 
                                : p == GoalPriority.Medium 
                                    ? (isSelected ? "bg-amber-500 text-white" : "bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400")
                                    : (isSelected ? "bg-gray-500 text-white" : "bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300");
                            <button type="button" @onclick="() => _editing.Priority = p" 
                                class="flex-1 px-4 py-2 rounded-xl font-medium transition-all @btnClass @(isSelected ? "ring-2 ring-offset-2 ring-current" : "")">
                                @L[$"Priority{p}"]
                            </button>
                        }
                    </div>
                </div>
                
                <!-- Show Monthly Target Toggle -->
                <div class="flex items-center justify-between p-3 rounded-xl bg-gray-50 dark:bg-gray-800">
                    <div>
                        <p class="text-sm font-medium text-gray-700 dark:text-gray-300">@L["ShowMonthlyTarget"]</p>
                        <p class="text-xs text-gray-500 dark:text-gray-400">@L["ShowMonthlyTargetHint"]</p>
                    </div>
                    <button type="button" @onclick="() => _editing.ShowMonthlyTarget = !_editing.ShowMonthlyTarget"
                        class="relative w-12 h-6 rounded-full transition-colors @(_editing.ShowMonthlyTarget ? "bg-primary-500" : "bg-gray-300 dark:bg-gray-600")">
                        <span class="absolute top-0.5 left-0.5 w-5 h-5 bg-white rounded-full shadow transition-transform @(_editing.ShowMonthlyTarget ? "translate-x-6" : "")"></span>
                    </button>
                </div>
            </div>

            <div class="flex gap-3 mt-6">
                <button @onclick="Save" class="flex-1 px-4 py-3 bg-gradient-to-r from-primary-500 to-primary-600 text-white font-semibold rounded-xl hover:from-primary-600 hover:to-primary-700 transition-all">
                    @L["Save"]
                </button>
                <button @onclick="() => _editing = null" class="px-4 py-3 text-gray-700 dark:text-gray-300 font-semibold rounded-xl hover:bg-gray-100 dark:hover:bg-gray-800 transition-all">
                    @L["Cancel"]
                </button>
            </div>
        </div>
    </div>
}

@code {
    List<Goal> _goals = new();
    Goal? _editing;
    Totals? _t;
    int _familyId;
    string _deadlineInput = "";  // For HTML month input binding

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthState.GetAuthenticationStateAsync();
        var userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        if (!string.IsNullOrEmpty(userId))
        {
            var user = await Finance.Auth.GetUserWithFamilyAsync(userId);
            if (user != null) _familyId = user.FamilyId;
        }
        _goals = await Finance.GetGoalsAsync(_familyId);
        var l = await Finance.GetLatestSnapshotAsync(_familyId);
        if (l != null) _t = await Finance.CalculateTotalsAsync(l);
    }
    
    void NewGoal()
    {
        _editing = new Goal { FamilyId = _familyId };
        _deadlineInput = "";
    }
    
    void Edit(Goal g)
    {
        _editing = new Goal 
        { 
            Id = g.Id, 
            Name = g.Name, 
            Target = g.Target, 
            AllocatedAmount = g.AllocatedAmount, 
            Deadline = g.Deadline, 
            Priority = g.Priority, 
            Category = g.Category, 
            ShowMonthlyTarget = g.ShowMonthlyTarget, 
            FamilyId = g.FamilyId 
        };
        _deadlineInput = g.Deadline?.ToString("yyyy-MM") ?? "";
    }
    
    async Task Save() 
    { 
        try
        {
            // Parse deadline from input
            if (!string.IsNullOrEmpty(_deadlineInput) && _deadlineInput.Length >= 7)
            {
                if (int.TryParse(_deadlineInput[..4], out var year) && 
                    int.TryParse(_deadlineInput.Substring(5, 2), out var month))
                {
                    _editing!.Deadline = new DateOnly(year, month, 1);
                }
            }
            else
            {
                _editing!.Deadline = null;
            }
            
            var isNew = _editing!.Id == 0;
            await Finance.SaveGoalAsync(_editing!); 
            _editing = null; 
            await OnInitializedAsync();
            
            Toast.ShowSuccess(isNew ? L["GoalCreated"].Value : L["GoalUpdated"].Value);
        }
        catch (Exception ex)
        {
            Toast.ShowError(L["ErrorSavingGoal"].Value + ": " + ex.Message);
        }
    }
    
    async Task Del(long id) 
    { 
        try
        {
            await Finance.DeleteGoalAsync(id); 
            await OnInitializedAsync();
            Toast.ShowSuccess(L["GoalDeleted"].Value);
        }
        catch (Exception ex)
        {
            Toast.ShowError(L["ErrorDeletingGoal"].Value + ": " + ex.Message);
        }
    }
}

@page "/logs"
@using FamilyFinance.Services
@inject LogService Log
@inject IStringLocalizer<SharedResource> L

<div class="max-w-6xl mx-auto">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100">@L["SystemLogs"]</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">@_logPath</p>
            @if (_logFiles.Count > 1)
            {
                <p class="text-xs text-gray-400 mt-1">@_logFiles.Count @L["LogFilesTotal"]</p>
            }
        </div>
        <div class="flex gap-2">
            <button @onclick="Refresh" class="flex items-center gap-2 px-4 py-2 bg-primary-500 text-white rounded-xl hover:bg-primary-600 transition-all">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                @L["Refresh"]
            </button>
            <div class="relative">
                <button @onclick="() => _showClearMenu = !_showClearMenu" class="flex items-center gap-2 px-4 py-2 bg-gray-600 text-white rounded-xl hover:bg-gray-700 transition-all">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    @L["ClearLogs"]
                </button>
                @if (_showClearMenu)
                {
                    <div class="absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 z-10">
                        <button @onclick="ClearToday" class="w-full px-4 py-3 text-left text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-t-xl">
                            @L["ClearTodayLogs"]
                        </button>
                        <button @onclick="ClearAll" class="w-full px-4 py-3 text-left text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/30 rounded-b-xl">
                            @L["ClearAllLogs"]
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="bg-gray-900 rounded-2xl p-4 overflow-hidden">
        <div class="overflow-x-auto max-h-[70vh] overflow-y-auto font-mono text-sm">
            @if (_logs.Count == 0)
            {
                <p class="text-gray-400 py-4 text-center">@L["NoLogs"]</p>
            }
            else
            {
                @foreach (var log in _logs)
                {
                    var cssClass = GetLogClass(log);
                    <div class="@cssClass py-1 px-2 hover:bg-gray-800 rounded whitespace-nowrap">@log</div>
                }
            }
        </div>
    </div>
</div>

@code {
    List<string> _logs = new();
    List<string> _logFiles = new();
    string _logPath = "";
    bool _showClearMenu = false;

    protected override void OnInitialized()
    {
        Refresh();
        _logPath = Log.GetLogFilePath();
    }

    void Refresh()
    {
        _logs = Log.GetRecentLogs(200);
        _logFiles = Log.GetLogFiles();
        _showClearMenu = false;
    }

    void ClearToday()
    {
        Log.ClearTodayLogs();
        Refresh();
    }

    void ClearAll()
    {
        Log.ClearAllLogs();
        Refresh();
    }

    string GetLogClass(string log)
    {
        if (log.Contains("[ERROR]") || log.Contains("[IMPORT-ERR]"))
            return "text-red-400";
        if (log.Contains("[WARN]"))
            return "text-yellow-400";
        if (log.Contains("[IMPORT]"))
            return "text-emerald-400";
        return "text-gray-300";
    }
}



@page "/help"
@using FamilyFinance.Components
@inject IStringLocalizer<SharedResource> L
@inject NavigationManager Nav

<PageTitle>@L["Documentation"] - FamilyFinance</PageTitle>

<div class="max-w-5xl mx-auto space-y-8 animate-in pb-12">
    <!-- Header with Tabs -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-8">
        <div class="flex items-center gap-4">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-indigo-500 to-violet-600 flex items-center justify-center shadow-lg shadow-indigo-500/30">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
            </div>
            <div>
                <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100">@L["Documentation"]</h1>
                <p class="text-gray-500 dark:text-gray-400">@L["Help_Home_Subtitle"]</p>
            </div>
        </div>

        <!-- Tab Navigation (Pills) -->
        <div class="flex p-1 bg-gray-100 dark:bg-gray-800/50 rounded-xl">
            <button @onclick="@(() => _activeTab = "Home")"
                    class="px-4 py-2 rounded-lg text-sm font-medium transition-all @(_activeTab == "Home" ? "bg-white dark:bg-gray-700 shadow-sm text-indigo-600 dark:text-indigo-400" : "text-gray-500 hover:text-gray-700 dark:hover:text-gray-300")">
                @L["Help_Tab_Home"]
            </button>
            <button @onclick="@(() => _activeTab = "Concepts")"
                    class="px-4 py-2 rounded-lg text-sm font-medium transition-all @(_activeTab == "Concepts" ? "bg-white dark:bg-gray-700 shadow-sm text-indigo-600 dark:text-indigo-400" : "text-gray-500 hover:text-gray-700 dark:hover:text-gray-300")">
                @L["Help_Tab_Concepts"]
            </button>
            <button @onclick="@(() => _activeTab = "Guides")"
                    class="px-4 py-2 rounded-lg text-sm font-medium transition-all @(_activeTab == "Guides" ? "bg-white dark:bg-gray-700 shadow-sm text-indigo-600 dark:text-indigo-400" : "text-gray-500 hover:text-gray-700 dark:hover:text-gray-300")">
                @L["Help_Tab_Guides"]
            </button>
            <button @onclick="@(() => _activeTab = "FAQ")"
                    class="px-4 py-2 rounded-lg text-sm font-medium transition-all @(_activeTab == "FAQ" ? "bg-white dark:bg-gray-700 shadow-sm text-indigo-600 dark:text-indigo-400" : "text-gray-500 hover:text-gray-700 dark:hover:text-gray-300")">
                @L["Help_Tab_FAQ"]
            </button>
        </div>
    </div>

    <!-- Content Area -->
    <div class="min-h-[400px]">
        @if (_activeTab == "Home")
        {
            <div class="space-y-8 animate-in slide-in-from-bottom-2 fade-in duration-300">
                <!-- Welcome Banner -->
                <div class="relative overflow-hidden group rounded-2xl p-8 bg-gradient-to-br from-indigo-600 to-violet-700 text-white shadow-xl shadow-indigo-500/20">
                    <div class="relative z-10 max-w-2xl">
                        <h2 class="text-3xl font-bold mb-4">@L["Help_Home_Title"]</h2>
                        <p class="text-indigo-100 text-lg leading-relaxed mb-6">
                            @L["Help_Home_NewUserDesc"]
                        </p>
                        <button @onclick="@(() => _activeTab = "Concepts")" class="px-6 py-2.5 bg-white text-indigo-600 font-semibold rounded-xl hover:bg-indigo-50 transition-colors">
                            @L["StartUsing"]
                        </button>
                    </div>
                    
                    <!-- Decorative Background -->
                    <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full blur-3xl -mr-16 -mt-16 pointer-events-none"></div>
                    <div class="absolute bottom-0 right-20 w-32 h-32 bg-indigo-500/30 rounded-full blur-2xl pointer-events-none"></div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Quick Links -->
                    <div class="bg-white dark:bg-gray-900 rounded-2xl p-6 border border-gray-100 dark:border-gray-800 shadow-sm">
                        <h3 class="text-lg font-bold text-gray-800 dark:text-gray-200 mb-4 flex items-center gap-2">
                            <span class="text-xl">âš¡</span> @L["Help_Home_QuickLinks"]
                        </h3>
                        <div class="space-y-3">
                            <button @onclick="@(() => Nav.NavigateTo("/snapshots"))" class="w-full text-left p-3 rounded-xl bg-gray-50 dark:bg-gray-800 hover:bg-indigo-50 dark:hover:bg-indigo-900/20 group transition-colors">
                                <div class="font-medium text-gray-700 dark:text-gray-300 group-hover:text-indigo-600 dark:group-hover:text-indigo-400">@L["CreateFirstSnapshot"]</div>
                                <div class="text-xs text-gray-500 mt-1">@L["Help_Concepts_Snapshot_Title"]</div>
                            </button>
                            <button @onclick="@(() => Nav.NavigateTo("/data"))" class="w-full text-left p-3 rounded-xl bg-gray-50 dark:bg-gray-800 hover:bg-indigo-50 dark:hover:bg-indigo-900/20 group transition-colors">
                                <div class="font-medium text-gray-700 dark:text-gray-300 group-hover:text-indigo-600 dark:group-hover:text-indigo-400">@L["ImportData"]</div>
                                <div class="text-xs text-gray-500 mt-1">CSV & JSON Backup</div>
                            </button>
                            <button @onclick="@(() => Nav.NavigateTo("/investments"))" class="w-full text-left p-3 rounded-xl bg-gray-50 dark:bg-gray-800 hover:bg-indigo-50 dark:hover:bg-indigo-900/20 group transition-colors">
                                <div class="font-medium text-gray-700 dark:text-gray-300 group-hover:text-indigo-600 dark:group-hover:text-indigo-400">@L["Help_Guide_Investments_Title"]</div>
                                <div class="text-xs text-gray-500 mt-1">PAC & ETF</div>
                            </button>
                        </div>
                    </div>

                    <!-- What's New -->
                    <div class="bg-white dark:bg-gray-900 rounded-2xl p-6 border border-gray-100 dark:border-gray-800 shadow-sm">
                        <h3 class="text-lg font-bold text-gray-800 dark:text-gray-200 mb-4 flex items-center gap-2">
                            <span class="text-xl">ðŸš€</span> @L["Help_Home_WhatsNew"]
                        </h3>
                        <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
                            @L["Help_Home_WhatsNewDesc"]
                        </p>
                        <div class="p-4 rounded-xl bg-gradient-to-r from-emerald-50 to-teal-50 dark:from-emerald-900/10 dark:to-teal-900/10 border border-emerald-100 dark:border-emerald-900/30">
                            <div class="text-sm font-semibold text-emerald-800 dark:text-emerald-400 mb-1">Update 2026.01 (v4.8.0)</div>
                            <div class="text-xs text-emerald-600 dark:text-emerald-500">
                                Introduzione Architettura Live-First, Gestione Pensioni avanzata e calcolo rendimento annualizzato.
                            </div>
                        </div>
                        <button @onclick="@(() => Nav.NavigateTo("/release-notes"))" class="w-full mt-4 py-2 text-sm font-medium text-indigo-600 hover:bg-indigo-50 dark:text-indigo-400 dark:hover:bg-indigo-900/20 rounded-lg transition-colors">
                            @L["ReleaseNotes"] â†’
                        </button>
                    </div>
                </div>
            </div>
        }
        else if (_activeTab == "Concepts")
        {
            <div class="space-y-6 animate-in slide-in-from-right-2 fade-in duration-300">
                <div class="bento-card p-8 border-l-4 border-indigo-500">
                    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-200 mb-3">ðŸ“¸ @L["Help_Concepts_Snapshot_Title"]</h3>
                    <p class="text-gray-600 dark:text-gray-300 leading-relaxed text-lg">
                        @L["Help_Concepts_Snapshot_Desc"]
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="bento-card p-6">
                        <h4 class="text-lg font-bold text-gray-800 dark:text-gray-200 mb-2 flex items-center gap-2">
                            <span class="text-blue-500">âš¡</span> @L["Help_Concepts_Live_Title"]
                        </h4>
                        <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
                            @L["Help_Concepts_Live_Desc"]
                        </p>
                    </div>
                    <div class="bento-card p-6">
                        <h4 class="text-lg font-bold text-gray-800 dark:text-gray-200 mb-2 flex items-center gap-2">
                            <span class="text-green-500">ðŸ“ˆ</span> @L["Help_Concepts_investments_Title"]
                        </h4>
                        <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
                            @L["Help_Concepts_investments_Desc"]
                        </p>
                    </div>
                </div>
            </div>
        }
        else if (_activeTab == "Guides")
        {
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 animate-in slide-in-from-right-2 fade-in duration-300">
                <div @onclick="@(() => Nav.NavigateTo("/snapshots"))" class="bento-card p-6 hover:border-indigo-300 dark:hover:border-indigo-700 transition-colors cursor-pointer group">
                    <div class="w-12 h-12 rounded-xl bg-orange-100 dark:bg-orange-900/30 flex items-center justify-center text-orange-600 dark:text-orange-400 mb-4 group-hover:scale-110 transition-transform">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                    </div>
                    <h3 class="text-lg font-bold text-gray-800 dark:text-gray-200 mb-1">@L["Help_Guide_FirstMonth_Title"]</h3>
                    <p class="text-sm text-gray-500 mb-4">@L["Help_Guide_FirstMonth_Desc"]</p>
                    <span class="text-indigo-600 dark:text-indigo-400 text-sm font-medium">@L["Show"] â†’</span>
                </div>

                <div @onclick="@(() => Nav.NavigateTo("/data"))" class="bento-card p-6 hover:border-indigo-300 dark:hover:border-indigo-700 transition-colors cursor-pointer group">
                    <div class="w-12 h-12 rounded-xl bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center text-blue-600 dark:text-blue-400 mb-4 group-hover:scale-110 transition-transform">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path></svg>
                    </div>
                    <h3 class="text-lg font-bold text-gray-800 dark:text-gray-200 mb-1">@L["Help_Guide_Import_Title"]</h3>
                    <p class="text-sm text-gray-500 mb-4">@L["Help_Guide_Import_Desc"]</p>
                    <span class="text-indigo-600 dark:text-indigo-400 text-sm font-medium">@L["Show"] â†’</span>
                </div>

                <div @onclick="@(() => Nav.NavigateTo("/investments"))" class="bento-card p-6 hover:border-indigo-300 dark:hover:border-indigo-700 transition-colors cursor-pointer group">
                    <div class="w-12 h-12 rounded-xl bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center text-emerald-600 dark:text-emerald-400 mb-4 group-hover:scale-110 transition-transform">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg>
                    </div>
                    <h3 class="text-lg font-bold text-gray-800 dark:text-gray-200 mb-1">@L["Help_Guide_Investments_Title"]</h3>
                    <p class="text-sm text-gray-500 mb-4">@L["Help_Guide_Investments_Desc"]</p>
                    <span class="text-indigo-600 dark:text-indigo-400 text-sm font-medium">@L["Show"] â†’</span>
                </div>
            </div>
        }
        else if (_activeTab == "FAQ")
        {
            <div class="space-y-4 animate-in slide-in-from-right-2 fade-in duration-300">
                <details class="bento-card p-6 group cursor-pointer bg-white dark:bg-gray-900">
                    <summary class="text-lg font-medium flex items-center gap-3 list-none">
                        <span class="w-8 h-8 rounded-full bg-indigo-50 dark:bg-indigo-900/30 flex items-center justify-center text-indigo-500 font-bold">?</span>
                        @L["FAQ_Q1"]
                        <svg class="w-5 h-5 ml-auto text-gray-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </summary>
                    <div class="pt-4 text-gray-600 dark:text-gray-400 border-t border-gray-100 dark:border-gray-800 mt-4 ml-11">
                        @L["FAQ_A1"]
                    </div>
                </details>

                <details class="bento-card p-6 group cursor-pointer bg-white dark:bg-gray-900">
                    <summary class="text-lg font-medium flex items-center gap-3 list-none">
                        <span class="w-8 h-8 rounded-full bg-indigo-50 dark:bg-indigo-900/30 flex items-center justify-center text-indigo-500 font-bold">?</span>
                        @L["FAQ_Q2"]
                        <svg class="w-5 h-5 ml-auto text-gray-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </summary>
                    <div class="pt-4 text-gray-600 dark:text-gray-400 border-t border-gray-100 dark:border-gray-800 mt-4 ml-11">
                        @L["FAQ_A2"]
                    </div>
                </details>

                <details class="bento-card p-6 group cursor-pointer bg-white dark:bg-gray-900">
                    <summary class="text-lg font-medium flex items-center gap-3 list-none">
                        <span class="w-8 h-8 rounded-full bg-indigo-50 dark:bg-indigo-900/30 flex items-center justify-center text-indigo-500 font-bold">?</span>
                        @L["Help_FAQ_Backup_Q"]
                        <svg class="w-5 h-5 ml-auto text-gray-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </summary>
                    <div class="pt-4 text-gray-600 dark:text-gray-400 border-t border-gray-100 dark:border-gray-800 mt-4 ml-11">
                        @L["Help_FAQ_Backup_A"]
                    </div>
                </details>

                 <details class="bento-card p-6 group cursor-pointer bg-white dark:bg-gray-900">
                    <summary class="text-lg font-medium flex items-center gap-3 list-none">
                        <span class="w-8 h-8 rounded-full bg-indigo-50 dark:bg-indigo-900/30 flex items-center justify-center text-indigo-500 font-bold">?</span>
                        @L["Help_FAQ_Reset_Q"]
                        <svg class="w-5 h-5 ml-auto text-gray-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </summary>
                    <div class="pt-4 text-gray-600 dark:text-gray-400 border-t border-gray-100 dark:border-gray-800 mt-4 ml-11">
                        @L["Help_FAQ_Reset_A"]
                    </div>
                </details>
            </div>
        }
    </div>

    <!-- Footer Help -->
    <div class="text-center text-gray-400 text-sm mt-12 border-t border-gray-200 dark:border-gray-800 pt-8">
        <p>@L["Help_Footer_Contact"]</p>
        <p class="mt-2">Versione Documentazione: 2026.01 (v4.8.1)</p>
    </div>
</div>

@code {
    private string _activeTab = "Home";
}

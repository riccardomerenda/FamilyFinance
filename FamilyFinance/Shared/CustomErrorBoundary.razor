@using Microsoft.Extensions.Logging
@inject ILogger<CustomErrorBoundary> Logger

<ErrorBoundary @ref="errorBoundary">
    <ChildContent>
        @ChildContent
    </ChildContent>
    <ErrorContent Context="ex">
        <div class="p-6 rounded-2xl bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 flex flex-col items-center justify-center text-center">
            <div class="w-16 h-16 rounded-full bg-red-100 dark:bg-red-800 flex items-center justify-center mb-4">
                <svg class="w-8 h-8 text-red-600 dark:text-red-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Oops! Something went wrong</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-6 max-w-md">
                Don't worry, it's not you - it's us. We encountered an unexpected error while processing your request.
            </p>
            <div class="flex gap-4">
                <button @onclick="Recover" class="px-6 py-2 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-xl transition-colors">
                    Try asking again
                </button>
                <a href="/" class="px-6 py-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-200 font-semibold rounded-xl transition-colors">
                   Return Home
                </a>
            </div>
            @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
            {
                <div class="mt-8 text-left w-full overflow-auto max-h-64 p-4 rounded-lg bg-gray-900 text-red-400 font-mono text-xs">
                    <p class="font-bold mb-2">Error Details (Dev Only):</p>
                    <pre>@ex.Message</pre>
                    <pre class="mt-2 text-gray-500">@ex.StackTrace</pre>
                </div>
            }
        </div>
    </ErrorContent>
</ErrorBoundary>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    
    // Reference to the standard ErrorBoundary component
    private ErrorBoundary? errorBoundary;

    protected override void OnParametersSet()
    {
        // Whenever parameters change (navigation), reset the error state
        errorBoundary?.Recover();
    }

    private void Recover()
    {
        errorBoundary?.Recover();
    }
}

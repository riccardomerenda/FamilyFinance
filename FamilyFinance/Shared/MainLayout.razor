@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using FamilyFinance.Models
@using FamilyFinance.Services
@using System.Security.Claims
@inject IStringLocalizer<SharedResource> L
@inject AuthenticationStateProvider AuthState
@inject NavigationManager Nav
@inject IWebHostEnvironment Env

<AuthorizeView>
    <Authorized>
        <div class="flex h-screen overflow-hidden">
            <!-- Sidebar -->
            <aside class="hidden lg:flex lg:flex-col w-72 bg-white dark:bg-gray-900 border-r border-gray-200 dark:border-gray-800">
                <!-- Logo -->
                <div class="flex items-center gap-3 px-6 py-5 border-b border-gray-200 dark:border-gray-800">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary-500 to-accent-500 flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-lg font-bold gradient-text">FamilyFinance</h1>
                        <p class="text-xs text-gray-500 dark:text-gray-400">Wealth Manager</p>
                    </div>
                </div>
                
                <!-- Navigation -->
                <nav class="flex-1 px-4 py-6 space-y-2 overflow-y-auto">
                    <NavLink href="" Match="NavLinkMatch.All" class="nav-item" ActiveClass="nav-item-active">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                        <span>@L["Dashboard"]</span>
                    </NavLink>
                    
                    <NavLink href="snapshots" class="nav-item" ActiveClass="nav-item-active">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <span>@L["Snapshots"]</span>
                    </NavLink>
                    
                    <NavLink href="accounts" class="nav-item" ActiveClass="nav-item-active">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                        </svg>
                        <span>@L["Accounts"]</span>
                    </NavLink>
                    
                    <NavLink href="goals" class="nav-item" ActiveClass="nav-item-active">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                        <span>@L["Goals"]</span>
                    </NavLink>
                    
                    <NavLink href="budget" class="nav-item" ActiveClass="nav-item-active">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                        </svg>
                        <span>@L["Budget"]</span>
                    </NavLink>
                    
                    <NavLink href="compare" class="nav-item" ActiveClass="nav-item-active">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                        <span>@L["Compare"]</span>
                    </NavLink>
                    
                    <NavLink href="projections" class="nav-item" ActiveClass="nav-item-active">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                        </svg>
                        <span>@L["Projections"]</span>
                    </NavLink>
                    
                    <NavLink href="portfolios" class="nav-item" ActiveClass="nav-item-active">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                        </svg>
                        <span>@L["Portfolios"]</span>
                    </NavLink>

                    <NavLink href="family-members" class="nav-item" ActiveClass="nav-item-active">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m0 0V5a2 2 0 00-2-2H7a2 2 0 00-2 2v8.197"></path>
                        </svg>
                        <span>@L["FamilyMembers"]</span>
                    </NavLink>
                    
                    <NavLink href="logs" class="nav-item" ActiveClass="nav-item-active">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        <span>@L["SystemLogs"]</span>
                    </NavLink>
                </nav>
                
                <!-- Footer -->
                <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-800">
                    <AppVersion />
                </div>
            </aside>
            
            <!-- Main content -->
            <div class="flex-1 flex flex-col overflow-hidden">
                <!-- Top bar -->
                <header class="flex items-center justify-between px-6 py-4 bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-800">
                    <!-- Mobile menu button -->
                    <button class="lg:hidden p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800" @onclick="ToggleMobileMenu">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            @if (_mobileMenuOpen)
                            {
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            }
                            else
                            {
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                            }
                        </svg>
                    </button>
                    
                    <div class="hidden lg:block">
                        <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200">@L["DashboardTitle"]</h2>
                    </div>
                    
                    <div class="flex items-center gap-3">
                        <LanguageSelector />
                        <ThemeToggle />
                        
                        <!-- User menu -->
                        <div class="flex items-center gap-2 pl-3 border-l border-gray-200 dark:border-gray-700">
                            <div class="w-8 h-8 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center">
                                <span class="text-sm font-medium text-primary-600 dark:text-primary-400">
                                    @(context.User.Identity?.Name?.Substring(0, 1).ToUpper() ?? "U")
                                </span>
                            </div>
                            <a href="/Account/Logout" class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 text-gray-500 dark:text-gray-400" title="@L["Logout"]">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </header>
                
                <!-- Mobile menu -->
                @if (_mobileMenuOpen)
                {
                    <div class="lg:hidden bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-800 px-4 py-3">
                        <nav class="space-y-1">
                            <NavLink href="" Match="NavLinkMatch.All" class="mobile-nav-item" @onclick="CloseMobileMenu">@L["Dashboard"]</NavLink>
                            <NavLink href="snapshots" class="mobile-nav-item" @onclick="CloseMobileMenu">@L["Snapshots"]</NavLink>
                            <NavLink href="accounts" class="mobile-nav-item" @onclick="CloseMobileMenu">@L["Accounts"]</NavLink>
                            <NavLink href="goals" class="mobile-nav-item" @onclick="CloseMobileMenu">@L["Goals"]</NavLink>
                            <NavLink href="budget" class="mobile-nav-item" @onclick="CloseMobileMenu">@L["Budget"]</NavLink>
                            <NavLink href="compare" class="mobile-nav-item" @onclick="CloseMobileMenu">@L["Compare"]</NavLink>
                            <NavLink href="projections" class="mobile-nav-item" @onclick="CloseMobileMenu">@L["Projections"]</NavLink>
                            <NavLink href="portfolios" class="mobile-nav-item" @onclick="CloseMobileMenu">@L["Portfolios"]</NavLink>
                            <NavLink href="family-members" class="mobile-nav-item" @onclick="CloseMobileMenu">@L["FamilyMembers"]</NavLink>
                            <NavLink href="logs" class="mobile-nav-item" @onclick="CloseMobileMenu">@L["SystemLogs"]</NavLink>
                            <a href="/Account/Logout" class="mobile-nav-item text-red-500">@L["Logout"]</a>
                        </nav>
                    </div>
                }
                
                <!-- Page content -->
                <main class="flex-1 overflow-y-auto bg-gray-50 dark:bg-gray-950">
                    @if (_isDemoUser)
                    {
                        <div class="bg-gradient-to-r from-amber-500 to-orange-500 text-white px-6 py-3">
                            <div class="flex items-center justify-between flex-wrap gap-3">
                                <div class="flex items-center gap-3">
                                    <span class="text-2xl">🎮</span>
                                    <div>
                                        <p class="font-semibold">Modalità Demo</p>
                                        <p class="text-sm text-amber-100">Stai esplorando con dati di esempio. I dati potrebbero essere resettati periodicamente.</p>
                                    </div>
                                </div>
                                <a href="https://www.linkedin.com/in/riccardomerenda/" target="_blank" rel="noopener noreferrer"
                                    class="px-4 py-2 bg-white text-amber-600 font-semibold rounded-lg hover:bg-amber-50 transition-colors flex items-center gap-2 text-sm">
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                    </svg>
                                    Richiedi Accesso
                                </a>
                            </div>
                        </div>
                    }
                    <div class="p-6">
                        @Body
                    </div>
                </main>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        @{
            Nav.NavigateTo("/Account/Login", forceLoad: true);
        }
    </NotAuthorized>
</AuthorizeView>

<style>
    .nav-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        border-radius: 0.75rem;
        font-weight: 500;
        color: #6b7280;
        transition: all 0.2s;
    }
    
    .nav-item:hover {
        background-color: #f3f4f6;
        color: #374151;
    }
    
    :global(.dark) .nav-item:hover {
        background-color: #1f2937;
        color: #e5e7eb;
    }
    
    .nav-item-active, .nav-item.active {
        background: linear-gradient(135deg, #6366f1, #4f46e5) !important;
        color: white !important;
        box-shadow: 0 4px 6px -1px rgba(99, 102, 241, 0.3);
    }
    
    .mobile-nav-item {
        display: block;
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        font-weight: 500;
        color: #6b7280;
    }
    
    .mobile-nav-item:hover, .mobile-nav-item.active {
        background-color: #f3f4f6;
        color: #4f46e5;
    }
    
    :global(.dark) .mobile-nav-item:hover, :global(.dark) .mobile-nav-item.active {
        background-color: #1f2937;
        color: #818cf8;
    }
</style>

@code {
    private bool _mobileMenuOpen = false;
    private bool _isDemoUser = false;

    protected override async Task OnInitializedAsync()
    {
        if (!Env.IsDevelopment())
        {
            var authState = await AuthState.GetAuthenticationStateAsync();
            var email = authState.User.FindFirst(ClaimTypes.Email)?.Value 
                     ?? authState.User.FindFirst(ClaimTypes.Name)?.Value;
            _isDemoUser = email == DemoDataSeeder.DemoEmail;
        }
    }

    private void ToggleMobileMenu()
    {
        _mobileMenuOpen = !_mobileMenuOpen;
    }

    private void CloseMobileMenu()
    {
        _mobileMenuOpen = false;
    }
}

@using FamilyFinance.Services
@using FamilyFinance.Services.Interfaces
@using FamilyFinance.Models
@using System.Security.Claims
@inject WizardStateService WizardState
@inject ISnapshotService SnapshotService
@inject IAccountService AccountService
@inject IPortfolioService PortfolioService
@inject IBudgetService BudgetService
@inject NotificationService Toast
@inject IStringLocalizer<SharedResource> L
@inject AuthenticationStateProvider AuthState
@inject FamilyFinance.Services.AuthService Auth
@implements IDisposable

@if (WizardState.IsOpen)
{
    <!-- Modal Backdrop -->
    <div class="fixed inset-0 bg-black/50 backdrop-blur-sm z-40 animate-in flex items-center justify-center" @onclick="Close">
        <!-- Modal -->
        <div class="w-full max-w-4xl max-h-[90vh] mx-4 bg-white dark:bg-gray-900 rounded-2xl shadow-2xl flex flex-col overflow-hidden animate-in" @onclick:stopPropagation="true">
            <!-- Header -->
            <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200 dark:border-gray-800 bg-gradient-to-r from-primary-500 to-accent-500">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-xl bg-white/20 flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <div>
                    <h2 class="text-xl font-bold text-white">
                        @(WizardState.IsEditing ? L["EditMonth"] : L["CloseMonth"])
                    </h2>
                    <p class="text-white/70 text-sm">@GetStepTitle()</p>
                </div>
            </div>
            <button @onclick="Close" class="p-2 rounded-lg hover:bg-white/20 transition-colors">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        
        <!-- Progress Steps -->
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-800/50">
            <div class="flex items-center justify-center gap-2">
                @for (int i = 0; i < 4; i++)
                {
                    var stepIndex = i;
                    var isActive = WizardState.CurrentStep == i;
                    var isCompleted = WizardState.CurrentStep > i;
                    
                    <button @onclick="() => WizardState.GoToStep(stepIndex)" 
                            class="flex items-center gap-2 px-3 py-1.5 rounded-full transition-all @(isActive ? "bg-primary-500 text-white" : isCompleted ? "bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400" : "bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400")">
                        <span class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold @(isActive ? "bg-white/20" : isCompleted ? "bg-green-500 text-white" : "bg-gray-200 dark:bg-gray-700")">
                            @if (isCompleted)
                            {
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                                </svg>
                            }
                            else
                            {
                                @(i + 1)
                            }
                        </span>
                        <span class="text-sm font-medium hidden sm:inline">@GetStepName(i)</span>
                    </button>
                    
                    @if (i < 3)
                    {
                        <div class="w-8 h-0.5 @(WizardState.CurrentStep > i ? "bg-green-500" : "bg-gray-200 dark:bg-gray-700")"></div>
                    }
                }
            </div>
        </div>
        
        <!-- Content -->
        <div class="flex-1 overflow-y-auto p-6">
            @if (_loading)
            {
                <div class="flex items-center justify-center h-64">
                    <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-500"></div>
                </div>
            }
            else
            {
                @switch (WizardState.CurrentStep)
                {
                    case 0:
                        <!-- Step 1: Liquidity -->
                        <div class="space-y-4">
                            <div class="flex items-center justify-between mb-4">
                                <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200">@L["AccountsAndLiquidity"]</h3>
                                <div class="flex items-center gap-2">
                                    <label class="text-sm text-gray-500 dark:text-gray-400">@L["ReferenceDate"]:</label>
                                    <InputDate @bind-Value="WizardState.SnapshotDate" class="px-3 py-1.5 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-sm" />
                                </div>
                            </div>
                            
                            <!-- Liquidity Accounts -->
                            <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-4 space-y-3">
                                <h4 class="font-medium text-gray-700 dark:text-gray-300 text-sm">@L["ChartLiquidity"]</h4>
                                @foreach (var acc in WizardState.AccountRows.Where(a => a.Category == AccountCategory.Liquidity))
                                {
                                    <div class="flex items-center justify-between gap-4">
                                        <div class="flex items-center gap-2 flex-1">
                                            <span class="font-medium text-gray-600 dark:text-gray-400 text-sm">@acc.Name</span>
                                            @if (acc.IsInterest)
                                            {
                                                <span class="px-2 py-0.5 text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded-full">@L["Interests"]</span>
                                            }
                                        </div>
                                        <InputNumber @bind-Value="acc.Amount" class="w-32 px-3 py-2 text-right rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 text-sm" />
                                    </div>
                                }
                            </div>
                            
                            <!-- Pension Accounts -->
                            @if (WizardState.AccountRows.Any(a => a.Category == AccountCategory.Pension || a.Category == AccountCategory.Insurance))
                            {
                                <div class="bg-purple-50 dark:bg-purple-900/20 rounded-xl p-4 space-y-3">
                                    <h4 class="font-medium text-gray-700 dark:text-gray-300 text-sm">@L["TabPension"]</h4>
                                    @foreach (var acc in WizardState.AccountRows.Where(a => a.Category == AccountCategory.Pension || a.Category == AccountCategory.Insurance))
                                    {
                                        <div class="space-y-2">
                                            <div class="flex items-center justify-between gap-4">
                                                <span class="font-medium text-gray-600 dark:text-gray-400 text-sm flex-1">@acc.Name</span>
                                                <div class="flex items-center gap-2">
                                                    <InputNumber @bind-Value="acc.ContributionBasis" placeholder="@L["Contributions"]" class="w-28 px-3 py-2 text-right rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-sm" />
                                                    <InputNumber @bind-Value="acc.Amount" placeholder="@L["CurrentValue"]" class="w-28 px-3 py-2 text-right rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-sm" />
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                        break;
                        
                    case 1:
                        <!-- Step 2: Investments -->
                        <div class="space-y-4">
                            <div class="flex items-center justify-between mb-4">
                                <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200">@L["InvestmentsDirecta"]</h3>
                                <button @onclick="AddInvestment" class="text-sm font-medium text-primary-600 dark:text-primary-400 hover:text-primary-700">
                                    + @L["AddAsset"]
                                </button>
                            </div>
                            
                            <div class="space-y-3">
                                @foreach (var inv in WizardState.InvestmentRows)
                                {
                                    var gl = inv.Value - inv.CostBasis;
                                    var pct = inv.CostBasis > 0 ? (gl / inv.CostBasis) * 100 : 0;
                                    
                                    <div class="flex items-center gap-3 p-3 bg-gray-50 dark:bg-gray-800 rounded-xl">
                                        <select @bind="inv.PortfolioId" class="w-32 px-2 py-2 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-sm">
                                            <option value="">@L["NoPortfolio"]</option>
                                            @foreach (var p in _portfolios)
                                            {
                                                <option value="@p.Id">@p.Name</option>
                                            }
                                        </select>
                                        <InputText @bind-Value="inv.Name" placeholder="@L["AssetName"]" class="flex-1 px-3 py-2 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-sm" />
                                        <InputNumber @bind-Value="inv.CostBasis" placeholder="@L["CostBasis"]" class="w-28 px-3 py-2 text-right rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-sm" />
                                        <InputNumber @bind-Value="inv.Value" placeholder="@L["CurrentValue"]" class="w-28 px-3 py-2 text-right rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-sm" />
                                        @if (inv.CostBasis > 0)
                                        {
                                            <span class="w-20 text-right text-sm font-medium @(gl >= 0 ? "text-green-600 dark:text-green-400" : "text-red-600 dark:text-red-400")">
                                                @(pct >= 0 ? "+" : "")@pct.ToString("N1")%
                                            </span>
                                        }
                                        <button @onclick="() => WizardState.InvestmentRows.Remove(inv)" class="p-1.5 text-red-500 hover:bg-red-50 dark:hover:bg-red-900/30 rounded-lg">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                            </svg>
                                        </button>
                                    </div>
                                }
                            </div>
                            
                            @if (WizardState.InvestmentRows.Any())
                            {
                                var totalCost = WizardState.InvestmentRows.Sum(x => x.CostBasis);
                                var totalValue = WizardState.InvestmentRows.Sum(x => x.Value);
                                var totalGl = totalValue - totalCost;
                                var totalPct = totalCost > 0 ? (totalGl / totalCost) * 100 : 0;
                                
                                <div class="flex items-center justify-between p-4 bg-gray-100 dark:bg-gray-800 rounded-xl mt-4">
                                    <span class="font-bold text-gray-800 dark:text-gray-200">@L["Total"]</span>
                                    <div class="flex items-center gap-4">
                                        <span class="text-gray-600 dark:text-gray-400">@totalCost.ToString("N0") € → @totalValue.ToString("N0") €</span>
                                        <span class="font-bold @(totalGl >= 0 ? "text-green-600 dark:text-green-400" : "text-red-600 dark:text-red-400")">
                                            @(totalGl >= 0 ? "+" : "")@totalGl.ToString("N0") € (@(totalPct >= 0 ? "+" : "")@totalPct.ToString("N2")%)
                                        </span>
                                    </div>
                                </div>
                            }
                        </div>
                        break;
                        
                    case 2:
                        <!-- Step 3: Expenses -->
                        <div class="space-y-4">
                            <div class="flex items-center justify-between mb-4">
                                <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200">@L["MonthlyExpenses"]</h3>
                                <a href="/budget" class="text-sm font-medium text-amber-600 dark:text-amber-400 hover:text-amber-700">@L["ManageCategories"]</a>
                            </div>
                            
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                                @foreach (var exp in WizardState.ExpenseRows)
                                {
                                    var pct = exp.Budget > 0 ? (exp.Amount / exp.Budget) * 100 : 0;
                                    var isOver = exp.Amount > exp.Budget && exp.Budget > 0;
                                    
                                    <div class="p-3 rounded-xl bg-gray-50 dark:bg-gray-800 flex items-center gap-3">
                                        <div class="w-10 h-10 rounded-lg flex items-center justify-center text-xl shrink-0" style="background-color: @(exp.Color)20">
                                            @exp.Icon
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <div class="flex items-center justify-between mb-1">
                                                <span class="font-medium text-gray-700 dark:text-gray-300 text-sm truncate">@exp.Name</span>
                                                @if (exp.Budget > 0)
                                                {
                                                    <span class="text-xs text-gray-500 dark:text-gray-400">/ @exp.Budget.ToString("N0") €</span>
                                                }
                                            </div>
                                            <InputNumber @bind-Value="exp.Amount" class="@GetExpenseInputClass(isOver)" />
                                            @if (exp.Budget > 0 && exp.Amount > 0)
                                            {
                                                var barClass = isOver ? "bg-red-500" : pct > 80 ? "bg-amber-500" : "bg-green-500";
                                                <div class="mt-2 h-1.5 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                                                    <div class="h-full rounded-full transition-all @barClass" style="width: @Math.Min(100, pct)%"></div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                            
                            @{
                                var totalExpenses = WizardState.ExpenseRows.Sum(e => e.Amount);
                                var totalBudget = WizardState.ExpenseRows.Sum(e => e.Budget);
                                var totalDiff = totalBudget - totalExpenses;
                            }
                            @if (totalExpenses > 0 || totalBudget > 0)
                            {
                                <div class="mt-4 p-4 rounded-xl @(totalDiff < 0 ? "bg-red-100 dark:bg-red-900/30" : "bg-green-100 dark:bg-green-900/30") flex items-center justify-between">
                                    <span class="font-bold text-gray-800 dark:text-gray-200">@L["TotalExpenses"]</span>
                                    <span class="text-xl font-bold @(totalDiff < 0 ? "text-red-600 dark:text-red-400" : "text-green-600 dark:text-green-400")">
                                        @totalExpenses.ToString("N0") €
                                        @if (totalBudget > 0)
                                        {
                                            <span class="text-sm text-gray-600 dark:text-gray-400 ml-2">/ @totalBudget.ToString("N0") €</span>
                                        }
                                    </span>
                                </div>
                            }
                        </div>
                        break;
                        
                    case 3:
                        <!-- Step 4: Recap -->
                        <div class="space-y-6">
                            <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-4">@L["WizardStepRecap"]</h3>
                            
                            <!-- Summary Cards -->
                            <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
                                <div class="p-4 rounded-xl bg-blue-50 dark:bg-blue-900/20">
                                    <p class="text-sm text-blue-600 dark:text-blue-400 font-medium">@L["ChartLiquidity"]</p>
                                    <p class="text-2xl font-bold text-blue-700 dark:text-blue-300 money">@(WizardState.AccountRows.Where(a => a.Category == AccountCategory.Liquidity).Sum(a => a.Amount).ToString("N0")) €</p>
                                </div>
                                <div class="p-4 rounded-xl bg-cyan-50 dark:bg-cyan-900/20">
                                    <p class="text-sm text-cyan-600 dark:text-cyan-400 font-medium">@L["ChartInvestments"]</p>
                                    <p class="text-2xl font-bold text-cyan-700 dark:text-cyan-300 money">@(WizardState.InvestmentRows.Sum(i => i.Value).ToString("N0")) €</p>
                                </div>
                                <div class="p-4 rounded-xl bg-purple-50 dark:bg-purple-900/20">
                                    <p class="text-sm text-purple-600 dark:text-purple-400 font-medium">@L["PensionInsurance"]</p>
                                    <p class="text-2xl font-bold text-purple-700 dark:text-purple-300 money">@(WizardState.AccountRows.Where(a => a.Category == AccountCategory.Pension || a.Category == AccountCategory.Insurance).Sum(a => a.Amount).ToString("N0")) €</p>
                                </div>
                                <div class="p-4 rounded-xl bg-amber-50 dark:bg-amber-900/20">
                                    <p class="text-sm text-amber-600 dark:text-amber-400 font-medium">@L["TotalExpenses"]</p>
                                    <p class="text-2xl font-bold text-amber-700 dark:text-amber-300 money">@(WizardState.ExpenseRows.Sum(e => e.Amount).ToString("N0")) €</p>
                                </div>
                            </div>
                            
                            <!-- Grand Total -->
                            @{
                                var grandTotal = WizardState.AccountRows.Sum(a => a.Amount) + WizardState.InvestmentRows.Sum(i => i.Value);
                            }
                            <div class="p-6 rounded-xl bg-gradient-to-r from-primary-500 to-accent-500 text-white">
                                <p class="text-white/70 text-sm font-medium">@L["NetWorthTotal"]</p>
                                <p class="text-4xl font-extrabold money">@grandTotal.ToString("N0") €</p>
                                <p class="text-white/60 text-sm mt-1">@WizardState.SnapshotDate.ToString("MMMM yyyy")</p>
                            </div>
                        </div>
                        break;
                }
            }
        </div>
        
        <!-- Footer -->
        <div class="flex items-center justify-between px-6 py-4 border-t border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-800/50">
            <button @onclick="Close" class="px-4 py-2 text-gray-600 dark:text-gray-400 font-medium rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
                @L["Cancel"]
            </button>
            <div class="flex items-center gap-3">
                @if (WizardState.CurrentStep > 0)
                {
                    <button @onclick="WizardState.PreviousStep" class="px-4 py-2 text-gray-700 dark:text-gray-300 font-medium rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                        @L["WizardPrevious"]
                    </button>
                }
                @if (WizardState.CurrentStep < 3)
                {
                    <button @onclick="WizardState.NextStep" class="px-6 py-2 bg-primary-500 hover:bg-primary-600 text-white font-semibold rounded-lg transition-colors flex items-center gap-2">
                        @L["WizardNext"]
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </button>
                }
                else
                {
                    <button @onclick="Save" disabled="@_saving" class="px-6 py-2 bg-green-500 hover:bg-green-600 disabled:opacity-50 text-white font-semibold rounded-lg transition-colors flex items-center gap-2">
                        @if (_saving)
                        {
                            <div class="w-4 h-4 border-2 border-white/30 border-t-white rounded-full animate-spin"></div>
                        }
                        else
                        {
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        }
                        @L["WizardFinish"]
                    </button>
                }
            </div>
        </div>
        </div>
    </div>
}

@code {
    [Parameter] public EventCallback OnSaved { get; set; }
    
    private bool _loading = true;
    private bool _saving = false;
    private int _familyId;
    private List<Portfolio> _portfolios = new();
    
    protected override void OnInitialized()
    {
        WizardState.OnChange += StateHasChanged;
    }
    
    public void Dispose()
    {
        WizardState.OnChange -= StateHasChanged;
    }
    
    protected override async Task OnParametersSetAsync()
    {
        if (WizardState.IsOpen && WizardState.AccountRows.Count == 0)
        {
            await LoadData();
        }
    }
    
    private async Task LoadData()
    {
        _loading = true;
        
        // Get family ID
        var authState = await AuthState.GetAuthenticationStateAsync();
        var userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        if (!string.IsNullOrEmpty(userId))
        {
            var user = await Auth.GetUserWithFamilyAsync(userId);
            if (user != null) _familyId = user.FamilyId;
        }
        
        // Load accounts
        var accounts = await AccountService.GetAllAsync(_familyId);
        _portfolios = await PortfolioService.GetAllAsync(_familyId);
        var budgetCategories = await BudgetService.GetCategoriesAsync(_familyId);
        
        if (WizardState.IsEditing && WizardState.EditingSnapshotId.HasValue)
        {
            // Load existing snapshot data
            var snapshot = await SnapshotService.GetByIdAsync(WizardState.EditingSnapshotId.Value);
            if (snapshot != null)
            {
                WizardState.SnapshotDate = snapshot.SnapshotDate.ToDateTime(TimeOnly.MinValue);
                
                WizardState.AccountRows = accounts.Select(a => {
                    var line = snapshot.Lines.FirstOrDefault(l => l.AccountId == a.Id);
                    return new WizardStateService.AccountRow {
                        Id = a.Id, Name = a.Name, IsInterest = a.IsInterest, Category = a.Category,
                        Amount = line?.Amount ?? 0,
                        ContributionBasis = line?.ContributionBasis ?? 0
                    };
                }).ToList();
                
                WizardState.InvestmentRows = snapshot.Investments.Select(i => 
                    new WizardStateService.InvestmentRow { Name = i.Name, CostBasis = i.CostBasis, Value = i.Value, PortfolioId = i.PortfolioId }
                ).ToList();
                
                WizardState.ExpenseRows = budgetCategories.Select(c => {
                    var expense = snapshot.Expenses.FirstOrDefault(e => e.CategoryId == c.Id);
                    return new WizardStateService.ExpenseRow {
                        CategoryId = c.Id, Name = c.Name, Icon = c.Icon, Color = c.Color,
                        Budget = c.MonthlyBudget, Amount = expense?.Amount ?? 0, Notes = expense?.Notes
                    };
                }).ToList();
            }
        }
        else
        {
            // Load from latest snapshot or defaults
            var lastSnapshot = await SnapshotService.GetLatestAsync(_familyId);
            
            if (lastSnapshot != null)
            {
                WizardState.AccountRows = accounts.Select(a => {
                    var line = lastSnapshot.Lines.FirstOrDefault(l => l.AccountId == a.Id);
                    return new WizardStateService.AccountRow {
                        Id = a.Id, Name = a.Name, IsInterest = a.IsInterest, Category = a.Category,
                        Amount = line?.Amount ?? 0,
                        ContributionBasis = line?.ContributionBasis ?? 0
                    };
                }).ToList();
                
                WizardState.InvestmentRows = lastSnapshot.Investments.Select(i => 
                    new WizardStateService.InvestmentRow { Name = i.Name, CostBasis = i.CostBasis, Value = i.Value, PortfolioId = i.PortfolioId }
                ).ToList();
            }
            else
            {
                WizardState.AccountRows = accounts.Select(a => 
                    new WizardStateService.AccountRow { Id = a.Id, Name = a.Name, IsInterest = a.IsInterest, Category = a.Category, Amount = 0, ContributionBasis = 0 }
                ).ToList();
                
                WizardState.InvestmentRows.Add(new WizardStateService.InvestmentRow { Name = "VWCE", CostBasis = 0, Value = 0 });
                WizardState.InvestmentRows.Add(new WizardStateService.InvestmentRow { Name = "XEON", CostBasis = 0, Value = 0 });
            }
            
            WizardState.ExpenseRows = budgetCategories.Select(c => 
                new WizardStateService.ExpenseRow { CategoryId = c.Id, Name = c.Name, Icon = c.Icon, Color = c.Color, Budget = c.MonthlyBudget, Amount = 0 }
            ).ToList();
        }
        
        _loading = false;
    }
    
    private void AddInvestment()
    {
        WizardState.InvestmentRows.Add(new WizardStateService.InvestmentRow());
    }
    
    private void Close()
    {
        WizardState.Close();
    }
    
    private async Task Save()
    {
        _saving = true;
        
        try
        {
            var dateOnly = DateOnly.FromDateTime(WizardState.SnapshotDate);
            var accs = WizardState.AccountRows.Select(r => (r.Id, r.Amount, r.ContributionBasis)).ToList();
            var invs = WizardState.InvestmentRows.Select(r => (r.Name, r.CostBasis, r.Value, r.PortfolioId)).ToList();
            var recs = WizardState.CreditRows.Select(r => (r.Description, r.Amount, r.Status, (DateOnly?)null)).ToList();
            
            var snapshotId = await SnapshotService.SaveAsync(_familyId, WizardState.EditingSnapshotId, dateOnly, accs, invs, recs);
            
            // Save expenses
            if (WizardState.ExpenseRows.Any())
            {
                var expenses = WizardState.ExpenseRows.Select(e => (e.CategoryId, e.Amount, e.Notes)).ToList();
                await SnapshotService.SaveExpensesAsync(snapshotId, expenses);
            }
            
            Toast.ShowSuccess(WizardState.IsEditing ? L["MonthUpdatedSuccess"].Value : L["MonthClosedSuccess"].Value);
            WizardState.Close();
            await OnSaved.InvokeAsync();
        }
        catch (Exception ex)
        {
            Toast.ShowError(ex.Message);
        }
        finally
        {
            _saving = false;
        }
    }
    
    private string GetStepName(int step) => step switch
    {
        0 => L["WizardStepLiquidity"],
        1 => L["WizardStepInvestments"],
        2 => L["WizardStepExpenses"],
        3 => L["WizardStepRecap"],
        _ => ""
    };
    
    private string GetStepTitle() => $"Step {WizardState.CurrentStep + 1} / 4: {GetStepName(WizardState.CurrentStep)}";
    
    private string GetExpenseInputClass(bool isOver) => isOver
        ? "w-full px-3 py-2 text-right rounded-lg border text-sm border-red-300 dark:border-red-700 bg-red-50 dark:bg-red-900/20 text-gray-900 dark:text-gray-100"
        : "w-full px-3 py-2 text-right rounded-lg border text-sm border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100";

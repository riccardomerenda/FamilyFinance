@inject IStringLocalizer<SharedResource> L

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <!-- Current Total (Liquidity + Investments) -->
    <div class="card-hover bg-white dark:bg-gray-900 rounded-2xl p-6 border border-gray-200 dark:border-gray-800">
        <div class="flex items-center justify-between mb-4">
            <span class="text-sm font-medium text-gray-500 dark:text-gray-400">@L["CurrentTotal"]</span>
            <div class="w-10 h-10 rounded-xl bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                </svg>
            </div>
        </div>
        <p class="text-3xl font-bold text-gray-900 dark:text-white">@Totals.CurrentTotal.ToString("N0") €</p>
        <p class="text-xs text-gray-400 mt-1">@L["LiquidityPlusInvestments"]</p>
    </div>

    <!-- Projected (+ Credits) -->
    <div class="card-hover bg-white dark:bg-gray-900 rounded-2xl p-6 border border-gray-200 dark:border-gray-800">
        <div class="flex items-center justify-between mb-4">
            <span class="text-sm font-medium text-gray-500 dark:text-gray-400">@L["Projected"]</span>
            <div class="w-10 h-10 rounded-xl bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center">
                <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
        </div>
        <p class="text-3xl font-bold text-gray-900 dark:text-white">@Totals.ProjectedTotal.ToString("N0") €</p>
        <p class="text-xs text-gray-400 mt-1">@L["IncludingCredits"]</p>
    </div>

    <!-- Net Worth (PRIMARY - without pension, pension shown as secondary) -->
    <div class="card-hover bg-gradient-to-br from-primary-500 to-primary-700 rounded-2xl p-6 text-white">
        <div class="flex items-center justify-between mb-4">
            <span class="text-sm font-medium text-primary-100">@L["NetWorthTotal"]</span>
            <div class="w-10 h-10 rounded-xl bg-white/20 flex items-center justify-center">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
        </div>
        <p class="text-3xl font-bold">@Totals.ProjectedTotal.ToString("N0") €</p>
        <p class="text-xs text-primary-200 mt-1">@L["LiquidityPlusInvestmentsCredits"]</p>
        @if (Totals.PensionInsuranceValue > 0)
        {
            <div class="mt-3 pt-3 border-t border-white/20">
                <p class="text-sm text-primary-100">
                    @L["IncludingPension"]: <span class="font-semibold">@Totals.GrandTotal.ToString("N0") €</span>
                </p>
            </div>
        }
    </div>
</div>

@code {
    [Parameter, EditorRequired] public Totals Totals { get; set; } = null!;
}


@using FamilyFinance.Models
@inject NavigationManager Nav
@inject IStringLocalizer<SharedResource> L

<div class="bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-200 dark:border-gray-700 p-4">
    @* Contextual Suggestions (compact inline) *@
    @if (_suggestions.Any())
    {
        <div class="flex flex-wrap gap-2 mb-4 pb-4 border-b border-gray-200 dark:border-gray-700">
            @foreach (var s in _suggestions)
            {
                <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-lg text-sm @s.BgClass border @s.BorderClass">
                    <span>@s.Icon</span>
                    <span class="font-medium @s.TextClass">@s.Message</span>
                    @if (!string.IsNullOrEmpty(s.ActionUrl))
                    {
                        <a href="@s.ActionUrl" class="ml-1 px-2 py-0.5 text-xs font-semibold rounded transition-colors @s.ButtonClass">
                            @s.ActionLabel
                        </a>
                    }
                    else if (s.ActionCallback.HasDelegate)
                    {
                        <button @onclick="s.ActionCallback" class="ml-1 px-2 py-0.5 text-xs font-semibold rounded transition-colors @s.ButtonClass">
                            @s.ActionLabel
                        </button>
                    }
                </div>
            }
        </div>
    }

    @* Main Actions Row *@
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        @* Left: Import/Update Actions *@
        <div class="flex flex-wrap items-center gap-2">
            <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider mr-2">@L["ImportSection"]</span>
            <a href="/import-wizard" class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-indigo-700 dark:text-indigo-300 bg-indigo-50 dark:bg-indigo-900/30 hover:bg-indigo-100 dark:hover:bg-indigo-900/50 rounded-lg border border-indigo-200 dark:border-indigo-800 transition-colors">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                </svg>
                CSV
            </a>
            <a href="/import-investments" class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-cyan-700 dark:text-cyan-300 bg-cyan-50 dark:bg-cyan-900/30 hover:bg-cyan-100 dark:hover:bg-cyan-900/50 rounded-lg border border-cyan-200 dark:border-cyan-800 transition-colors">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
                Directa
            </a>
            <a href="/accounts" class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-emerald-700 dark:text-emerald-300 bg-emerald-50 dark:bg-emerald-900/30 hover:bg-emerald-100 dark:hover:bg-emerald-900/50 rounded-lg border border-emerald-200 dark:border-emerald-800 transition-colors">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                @L["UpdateBalances"]
            </a>
        </div>

        @* Right: Current Month Actions *@
        <div class="flex items-center gap-3">
            <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span class="font-medium text-gray-700 dark:text-gray-300">
                    @(LatestSnapshot?.SnapshotDate.ToString("MMM yyyy") ?? DateTime.Today.ToString("MMM yyyy"))
                </span>
                @if (IsCurrentMonthClosed)
                {
                    <span class="px-1.5 py-0.5 text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded">âœ“</span>
                }
            </div>
            
            @if (IsCurrentMonthClosed)
            {
                <button @onclick="OnEditMonth" class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-semibold text-white bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 rounded-lg shadow-sm transition-all">
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                    </svg>
                    @L["EditMonth"]
                </button>
            }
            else
            {
                <button @onclick="OnCloseMonth" class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-semibold text-white bg-gradient-to-r from-primary-500 to-accent-500 hover:from-primary-600 hover:to-accent-600 rounded-lg shadow-sm transition-all">
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    @L["CloseMonth"]
                </button>
            }
            
            @if (LatestSnapshot != null)
            {
                <a href="/snapshots/@LatestSnapshot.Id/report" class="text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                    @L["ViewReport"] â†’
                </a>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public Snapshot? LatestSnapshot { get; set; }
    [Parameter] public DateTime? InvestmentsLastUpdated { get; set; }
    [Parameter] public EventCallback OnCloseMonth { get; set; }
    [Parameter] public EventCallback OnEditMonth { get; set; }

    private List<Suggestion> _suggestions = new();
    
    private bool IsCurrentMonthClosed => LatestSnapshot != null 
        && LatestSnapshot.SnapshotDate.Year == DateTime.Today.Year 
        && LatestSnapshot.SnapshotDate.Month == DateTime.Today.Month;
    
    private DateOnly NextMonthDate => LatestSnapshot != null 
        ? LatestSnapshot.SnapshotDate.AddMonths(1) 
        : new DateOnly(DateTime.Today.Year, DateTime.Today.Month, 1);

    protected override void OnParametersSet()
    {
        BuildSuggestions();
    }
    
    private void BuildSuggestions()
    {
        _suggestions.Clear();
        
        // Suggestion 1: Investments outdated (>7 days)
        if (InvestmentsLastUpdated.HasValue)
        {
            var daysSinceUpdate = (DateTime.UtcNow - InvestmentsLastUpdated.Value).TotalDays;
            if (daysSinceUpdate > 7)
            {
                _suggestions.Add(new Suggestion
                {
                    Icon = "ðŸ“ˆ",
                    Message = string.Format(L["InvestmentsOutdated"], (int)daysSinceUpdate),
                    ActionLabel = L["UpdateNow"],
                    ActionUrl = "/import-investments",
                    BgClass = "bg-amber-50 dark:bg-amber-900/20",
                    BorderClass = "border-amber-200 dark:border-amber-800",
                    TextClass = "text-amber-700 dark:text-amber-300",
                    ButtonClass = "bg-amber-500 hover:bg-amber-600 text-white"
                });
            }
        }
        
        // Suggestion 2: Month not closed
        if (!IsCurrentMonthClosed)
        {
            var dayOfMonth = DateTime.Today.Day;
            
            // Show suggestion only after the 5th of the month
            if (dayOfMonth >= 5)
            {
                _suggestions.Add(new Suggestion
                {
                    Icon = "ðŸ“…",
                    Message = L["MonthNotClosed"],
                    ActionLabel = L["CloseMonth"],
                    ActionCallback = OnCloseMonth,
                    BgClass = "bg-blue-50 dark:bg-blue-900/20",
                    BorderClass = "border-blue-200 dark:border-blue-800",
                    TextClass = "text-blue-700 dark:text-blue-300",
                    ButtonClass = "bg-blue-500 hover:bg-blue-600 text-white"
                });
            }
        }
    }

    private class Suggestion
    {
        public string Icon { get; set; } = "";
        public string Message { get; set; } = "";
        public string ActionLabel { get; set; } = "";
        public string? ActionUrl { get; set; }
        public EventCallback ActionCallback { get; set; }
        public string BgClass { get; set; } = "";
        public string BorderClass { get; set; } = "";
        public string TextClass { get; set; } = "";
        public string ButtonClass { get; set; } = "";
    }
}
